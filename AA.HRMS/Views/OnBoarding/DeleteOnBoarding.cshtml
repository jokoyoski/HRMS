
@model AA.HRMS.Interfaces.IOnBoardingView

@{
    ViewBag.Title = "Delete Employee";
}

@section PageTitle{
    Delete Employee
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteOnBoarding", "OnBoarding", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="employeeId" id="employeeId" value="@Model.EmployeeID" />

        
        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Last Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <label id="LastName" name="LastName" style="width: 250px;" type="text" maxlength="50">@Model.LastName</label>
            </div>
        </div>
        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                First Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <label id="FirstName" name="FirstName" style="width: 250px;" type="text" maxlength="50">@Model.FirstName</label>
            </div>
        </div>
        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column" style="margin-left: 195px;">
                <input class="blueButton" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            </div>
            <div class="column" style="margin-left: 15px;">
                <input id="btnCancel" class="blueButton" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('Delete Employee ' + $('#LastName').val());

        $('#btnCancel').click(function () {
            window.location.href = '/OnBoarding/OnBoardingList?EmployeeId=' + @Model.EmployeeID ;
            return false;
        });
    });
</script>

