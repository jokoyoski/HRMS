@model AA.HRMS.Interfaces.IDepartmentView

@{
    ViewBag.Title = "Delete Department";
}

@section PageTitle{
    Delete Department
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteDepartment", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="departmentId" id="departmentId" value="@Model.DepartmentId" />
        <input type="hidden" name="departmentName" id="departmentName" value="@Model.DepartmentName" />

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Comany Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("companyId", Model.CompanyDropDownList, new { style = "width:204px;height:20px;", id = "companyId", disabled="disabled" })
            </div>
        </div>
        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Department Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <label id="DepartmentName" name="DepartmentName" style="width: 250px;" type="text" maxlength="50">@Model.DepartmentName</label>
            </div>
        </div>
        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Description:
            </div>
            <div class="data column" style="overflow: hidden;">
                <label id="Description" name="Description" style="width: 250px;" type="text" maxlength="50">@Model.Description</label>
            </div>
        </div>
        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column" style="margin-left: 195px;">
                <input class="blueButton" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
            </div>
            <div class="column" style="margin-left: 15px;">
                <input id="btnCancel" class="blueButton" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('Delete Department ' + $('#departmentName').val());

        $('#btnCancel').click(function () {
            window.location.href = '/Administration/DepartmentList?CompanyId=' + @Model.CompanyId ;
            return false;
        });
    });
</script>