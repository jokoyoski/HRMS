@model AA.HRMS.Interfaces.IUserListView

@{
    ViewBag.Title = "User List";
    var hasInfo = (Model != null) && (Model.UserCollection.Any());
    

}


<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@ViewBag.Title</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


        @Html.AntiForgeryToken()
        @if (!string.IsNullOrEmpty(Model.ProcessingMessage))
        {
            <div>
                <div>
                    @Model.ProcessingMessage
                </div>
            </div>
        }

        @if (hasInfo)
        {
            <div class="data-table-area">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="data-table-list">
                                <div class="table-responsive">
                                    <table id="data-table-basic" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>User Name</th>
                                                <th>Name</th>
                                                <th>Phone Number</th>
                                                <th>Email</th>
                                                <th>Is UserVerified?</th>
                                                <th>Is Active?</th>
                                                <th>Action</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var d in Model.UserCollection)
                                            {
                                                <tr>
                                                    <td>
                                                        @d.Username
                                                    </td>
                                                    <td>
                                                        @($"{d.FirstName} {d.LastName}")
                                                    </td>
                                                    <td>
                                                        @d.PhoneNumber
                                                    </td>
                                                    <td>
                                                        @d.Email
                                                    </td>
                                                    <td>
                                                        @d.IsUserVerified
                                                    </td>

                                                    <td>
                                                        @DisplayHelper.YesOrNo(d.IsActive)
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm btn-primary" onclick="viewModal('/administration/viewuser?userId=@d.UserId')" data-placement="left" title="View User">View</button>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-sm btn-primary" href="/UserRole/Index?userId=@d.UserId" data-placement="left" title="@d.LastName Roles">Role(s)</a>
                                                    </td>


                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>User Name</th>
                                                <th>Name</th>
                                                <th>Phone Number</th>
                                                <th>Email</th>
                                                <th>Is UserVerified?</th>
                                                <th>Is Active?</th>
                                                <th>Action</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div>
                <div>
                    No User Available
                </div>
            </div>
        }
  



<div class="modal fade" id="viewModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayView">

            </div>
        </div>
    </div>
</div>


<script>

    var URL = "";
    
    function viewModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayView").html(data);
            }
        });

        $("#viewModal").modal();
    }
    
</script>
