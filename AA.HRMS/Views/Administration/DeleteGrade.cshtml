@model AA.HRMS.Interfaces.IGradeView

@{
    ViewBag.Title = "AA HRMS - Employees Grade Registration";
}

@section PageTitle{
    Delete Grade
}


<a href="/Administration/GradeList?companyId=@Model.CompanyId"> All Grades</a>

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteGrade", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" name="CompanyId" value="@Model.CompanyId" />
        <input type="hidden" name="gradeId" value="@Model.GradeId" />

      

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Grade Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <label id="GradeName" name="GradeName" style="width: 250px;" type="text" maxlength="50">@Model.GradeName</label>
            </div>
        </div>


        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column" style="margin-left: 195px;">
                <input class="blueButton" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Submit" />
            </div>
            <div class="column" style="margin-left: 15px;">
                <input id="btnCancel" class="blueButton" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                You must enter all information above correctly to enable submission.
            </div>
        </div>
    }
</div>


@section JavaScriptsIncludes
{
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
}


@section JavaScriptsExecution
{
    <script type="text/javascript">
        $(document).ready(function() {

            $('#btnCancel').click(function() {
                window.location.href = '/Administration/GradeList?companyId=' + @Model.CompanyId;
                return false;
            });


            $('#gradeName').bind('input propertychange',
                function() {
                    $('#btnSubmit').prop("class", "grayButton");
                    $('#btnSubmit').prop("disabled", true);

                    var gradeName = $('#gradeName').val().length > 0;


                    if ((gradeName)
                    ) {
                        $('#btnSubmit').prop("class", "blueButton");
                        $('#btnSubmit').prop("disabled", false);
                    }
                });

        });
    </script>
}

@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}
