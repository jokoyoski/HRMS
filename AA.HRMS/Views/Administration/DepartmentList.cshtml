@model AA.HRMS.Interfaces.IDepartmentListView

@{
    ViewBag.Title = "AA HRMS - Department List";
    var hasInfo = ((Model != null) && (Model.DepartmentCollection != null) && Model.DepartmentCollection.Any());
}
@section PageTitle{
    Departments List
}

<a class="editUrl" id="createDepartment" href="/Administration/AddDepartment?companyId=@Model.SelectedCompanyId"> Create Department </a>
<div class="jumbotron" style="padding-top: 10px; margin-bottom: 5px">
    @using (Html.BeginForm("DepartmentList", "Administration", FormMethod.Post, new
    {
        id = "filterForm"
    }))
    {
        @Html.AntiForgeryToken()
        if (!string.IsNullOrEmpty(Model.ProcessingMessage))
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    @Model.ProcessingMessage
                </div>
            </div>
        }
        <div class="columns" style="font-size: 12px; padding-bottom: 1px; padding-top: 15px;">
            <div class="column" style="font-weight: bold;">
                Filter Department List by:
            </div>
        </div>
        <div class="columns" style="font-size: 12px; padding-bottom: 2px; width: 100%;">
            <div class="column">
                <div class="columns" style="width: 100%;">
                    <div class="label column" style="width: 130px; text-align: right;">
                        Id:
                    </div>

                    <div class="data column" style="width: 220px; text-align: right;">
                        <input id="selectedDepartmentId" name="selectedDepartmentId" style="width: 200px;" type="text" value="@(Model.SelectedDepartmentId < 1? "" : Model.SelectedDepartmentId.ToString())" />
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="columns" style="width: 100%;">
                    <div class="label column" style="width: 135px; text-align: right;">
                        Name contains:
                    </div>
                    <div class="data column" style="width: 220px; text-align: right;">
                        <input id="selectedDepartment" name="selectedDepartment" style="width: 200px;" type="text" value="@Model.SelectedDepartment" />
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="columns" style="width: 100%; padding-top: 5px;">
                    <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                        Company:
                    </div>
                    <div class="data column" style="overflow: hidden;">
                        @Html.DropDownList("selectedCompanyId", Model.CompanyDropDownList, new { style = "width:204px;height:20px;", id = "selectedCompanyId" })
                    </div>
                </div>
            </div>
        </div>
        <div class="columns" style="font-size: 12px; margin-top: 10px; padding-bottom: 2px; width: 100%;">
            <div class="column" style="margin-left: 50px;">
                <input class="blueButton" id="btnFilter" name="submitButton" style="width: 100px;" type="submit" value="Filter" />
            </div>
            <div class="column" style="margin-left: 25px; vertical-align: middle;">
                <a href="/Administration/DepartmentList" style="vertical-align: middle; font-weight: bold;">Reset</a>
            </div>
        </div>
        if (hasInfo)
        {
            <div class="columns" style="font-size: 12px; width: 100%; font-style: italic;">
                Hold down the shift key to sort with multiple columns.
            </div>
            <div class="columns" style="width: 100%;">
                <div class="column" style="width: 100%;">
                    <table id="departmentList" class="tablesorter" style="border-color: transparent; width: 100%;">
                        <colgroup>
                            <col style="width: 80px;" />
                            <col style="width: 200px;" />
                            <col style="width: 200px;" />
@*                            <col style="width: 200px;" />*@
                            <col style="width: 200px;" />
                            <col style="width: 100px;" />
                            <col style="width: 80px;" />
                        </colgroup>
                        <thead style="width: 100%;">
                            <tr style="width: 100%;">
                                <th>Department Id</th>
                                <th>Name</th>
                                <th>Description</th>
@*                                <th>Parent Department</th>*@
                                <th>Company</th>
                                <th>Is Active?</th>
                                <th colspan="5">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.DepartmentCollection)
                            {
                                <tr style="width: 100%;">

                                    <td>
                                        @d.DepartmentId
                                    </td>
                                    <td>
                                        @d.DepartmentName
                                    </td>
                                    <td>
                                        @d.Description
                                    </td>
@*                                    <td>*@
@*                                        @d.ParentDepartmentName*@
@*                                    </td>*@
                                    <td>
                                        @d.CompanyName
                                    </td>
                                    <td style="border: 1px solid #FFF !important;">
                                        @DisplayHelper.YesOrNo(d.IsActive)
                                    </td>

                                    <td style="border: 1px solid #FFF !important;">
                                        <a class="popupUrl" id="coy_edit_@(d.CompanyId)" href="/Administration/EditDepartment?departmentId=@d.DepartmentId">Edit</a>
                                    </td>
                                    @{
                                        if (d.IsActive == true)
                                        {
                                            <td style="border: 1px solid #FFF !important;">
                                                <a class="popupUrl" id="dept_@(d.CompanyId)" href="/Administration/DeleteDepartment?departmentId=@d.DepartmentId">Delete</a>
                                            </td>
                                        }
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="columns" style="margin-top: 10px; width: 100%;">
                <div class="column">
                    @DisplayHelper.TablePager(Model.DepartmentCollection.Count())
                </div>
            </div>
        }
        else
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    No Department meets search criteria or none is setup
                </div>
            </div>
        }
    }
</div>

@section JavaScriptsIncludes
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.widgets.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.pager.js" type="text/javascript"></script>
}

@section JavaScriptsExecution
{
    <script type="text/javascript">


        $(document).ready(function () {

            $(function () {
                $('#departmentList').tablesorter({
                    theme: 'blue',
                    headers: { 6: { sorter: false }, 7: { sorter: false } },
                    widthFixed: true,
                    widgets: ['zebra'],
                    size: 10
                }).tablesorterPager({ container: $("#pager"), size: 10 });
            });

            // popup page
            var $popupDialog = $('<div></div>').dialog({
                autoOpen: false,
                appendTo: "form",
                width: 650,
                height: 700,
                modal: true,
                title: '',
                closeText: "",
                closeOnEscape: false,
                resizable: false
            });

            $('.popupUrl').click(function () {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');
                $("span.ui-dialog-title").text('Loading the Page');
                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });


            $('.editUrl').click(function () {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');

                $("span.ui-dialog-title").text('Loading the Page');

                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });
        });
    </script>
}

@section Stylesheets
{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
    <link href="/Content/tablesorter/theme.blue.css" rel="stylesheet" type="text/css" />
    <link href="/Content/tablesorter/jquery.tablesorter.pager.css" rel="stylesheet" type="text/css" />
}