@model AA.HRMS.Interfaces.IJobTitleView

@{
    ViewBag.Title = "Delete Job Title";
}

@section PageTitle{
    Delete Job Title
}



<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteJobTitle", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="jobTitleId" value="@Model.JobTitleId"/>
        <input type="hidden" name="companyId" value="@Model.CompanyId"/>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Job Title Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <p>@Model.JobTitleName</p>
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Job Definition
            </div>
            <div class="data column" >
                <p>@Model.JobDefinition</p>
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Job Function
            </div>
            <div class="data column" >
                <p>@Model.JobFunction</p>
            </div>
        </div>


        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column" style="margin-left: 195px;">
                <input class="blueButton" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete"/>
            </div>
            <div class="column" style="margin-left: 15px;">
                <input id="btnCancel" class="blueButton" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel"/>
            </div>

        </div>
    }
</div>




    <script type="text/javascript">
        $(document).ready(function () {
            $("span.ui-dialog-title").text('Delete Job Title ');

            $('#btnCancel').click(function() {
                window.location.href = '/Administration/JobTitleList?companyId=' + @Model.CompanyId;
                return false;
            });


        });
    </script>

