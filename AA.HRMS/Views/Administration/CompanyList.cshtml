@using AA.HRMS.Interfaces.ValueTypes

@model AA.HRMS.Interfaces.ICompanyListView

@{
    ViewBag.Title = "Company List";
    var hasInfo = (Model != null) && (Model.CompanyCollection.Any());


    var companyId = (int)HttpContext.Current.Session[SessionKey.CompanyId];
}


<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@ViewBag.Title</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <a class="btn" data-toggle="tooltip" href="/administration/registercompany" data-placement="left" title="Register Company "><i class="notika-icon notika-plus-symbol"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



    @Html.AntiForgeryToken()

    @if (!string.IsNullOrEmpty(Model.ProcessingMessage))
    {
        <div>
            <div class="container">
                <div class="alert alert-info alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Model.ProcessingMessage
                </div>
               
            </div>
        </div>
    }

    @if (hasInfo)
    {
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>City</th>
                                        <th>Action</th>
                                        <th>Action</th>
                                        <th>Action</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var d in Model.CompanyCollection)
                                    {
                                        <tr>
                                            <td>
                                                @d.CompanyName
                                            </td>
                                           
                                            <td>
                                                @d.CompanyCity
                                            </td>
                                            <td>

                                                <button class="btn btn-primary" onclick="viewModal('/Administration/ViewCompany?companyId=@d.CompanyId')" data-placement="left" title="View Company">View</button>
                                            </td>
                                       
                                            <td>
                                                <button class="btn btn-primary" onclick="editModal('/Administration/EditCompany?companyId=@d.CompanyId')" data-placement="left" title="Edit Company">Modify</button>
                                            </td>
                                            <td>
                                                <button class="btn btn-danger" onclick="deleteModal('/administration/deletecompany?companyId=@d.CompanyId')" data-placement="left" title="Delete Company">Delete</button>
                                            </td>

                                            @if (companyId != d.CompanyId)
                                            {
                                                <td>
                                                    <a  class="btn btn-danger" href="/Administration/SwitchCompany?companyId=@d.CompanyId" data-placement="left" title="Switch Company">Switch</a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <button disabled class="btn btn-success">Current Company</button>
                                                </td>
                                            }







                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Registration Number</th>
                                        <th>City</th>
                                        <th>Action</th>
                                        <th>Action</th>
                                        <th>Action</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    else
    {
        <div class="container">
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button>No Company Exists, register new company.
                
            </div>
        </div>
    }






<div class="modal fade" id="createModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayCreate">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="viewModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayView">

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayEdit">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayDelete">

            </div>
        </div>
    </div>
</div>

<script>

    var URL = "";

    function createModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayCreate").html(data);
            }
        });

        $("#createModal").modal();
    }

    function viewModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayView").html(data);
            }
        });

        $("#viewModal").modal();
    }

    function editModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayEdit").html(data);
            }
        });

        $("#editModal").modal();

    }

    function deleteModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayDelete").html(data);
            }
        });

        $("#deleteModal").modal();

    }
</script>

