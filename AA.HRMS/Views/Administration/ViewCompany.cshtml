@model AA.HRMS.Interfaces.ICompanyDetail

@{ 
    ViewBag.Title = Model.CompanyName;

    var companyLogo = "";
    
    var base64 = Convert.ToBase64String(Model.CompanyLogo.TheDigitalFile);
    companyLogo = string.Format("data:{0};base64,{1}", Model.CompanyLogo.TheDigitalFile, base64);

}



<div class="modal-header">
    <img src="@companyLogo" style="width: 100px; height: 100px;"/>
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>


@Html.ValidationSummary()

