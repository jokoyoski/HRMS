
@model AA.HRMS.Interfaces.IPromotionListView

@{
    ViewBag.Title = " Promotion History";
    var hasInfo = ((Model != null) && (Model.PromotionCollection != null) && Model.PromotionCollection.Any());
}




<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@ViewBag.Title</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <button class="btn" onclick="createModal('/Employee/Promote?employeeId=@Model.EmployeeId')" data-placement="left" title="Create Salary Scale "><i class="notika-icon notika-plus-symbol"></i></button>

                                <a class="btn" data-toggle="tooltip" href="~/Employee/ViewEmployee?employeeId=@Model.EmployeeId" data-placement="right" title="Back"><i class="notika-icon notika-back"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ProcessMessage))
{

    <div class="container">
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Model.ProcessMessage
        </div>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="container">
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Html.ValidationSummary()
        </div>
    </div>
}


@if (hasInfo)
{
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Employee Name</th>
                                        <th>Level Name</th>
                                        <th>Grade Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in Model.PromotionCollection)
                                    {
                                        <tr>

                                            <td>
                                                @d.EmployeeName
                                            </td>
                                            <td>
                                                @d.LevelName
                                            </td>
                                            <td>
                                                @d.GradeName
                                            </td>

                                            <td>
                                                <a class="btn btn-sm btn-primary" href="/companysetup/payscalebenefits?payscaleId=@Model.PayScaleId" data-placement="left" title="View @d.GradeName @d.GradeName">View</a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Company Name</th>
                                        <th>Level Name</th>
                                        <th>Grade Name</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-info alert-mg-b-0" role="alert">
                    <p>No Promotion History</p>
                </div>
            </div>
        </div>
    </div>

}




<div class="modal fade" id="createModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayCreate">

            </div>
        </div>
    </div>
</div>

<script>
    var URL = "";

    function createModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayCreate").html(data);
            }
        });


        $("#createModal").modal();
    }

</script>