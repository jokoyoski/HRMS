@model AA.HRMS.Interfaces.INextOfKinView


@{
    ViewBag.Title = "Add Employee Next Of Kin Details";
}



@Html.ValidationSummary()

@Model.ProcessingMessages


<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

@using (Html.BeginForm("CreateNextOfKin", "Employee", FormMethod.Post))
{
<div class="modal-body">


    @Html.AntiForgeryToken()

    @Html.ValidationSummary()

    @Model.ProcessingMessages

    <input name="employeeId" id="employeeId" value="@Model.EmployeeId" hidden />

    <input name="url" id="url" value="@Model.URL" hidden />

    <div class="form-example-int">
        <div class="form-group">
            <label>NextOfKin Name</label>
            <div class="">
                <input id="nextOfKinName" required name="nextOfKinName" type="text" class="form-control" value="@Model.NextOfKinName" />
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label> Date Of Birth</label>
            <div class="date">
                <input id="dateOfBirth" required name="dateOfBirth" type="date" class="form-control" value="@Model.DateOfBirth" />
            </div>
        </div>
    </div>
    

    <div class="form-example-int">
        <div class="form-group">
            <label> Email</label>
            <div class="">
                <input id="emial" required name="emial" type="text" class="form-control" value="@Model.Emial" />
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label> Mobile Contact</label>
            <div class="">
                <input id="mobile" required name="mobile" type="text" class="form-control" value="@Model.Mobile" />
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label> Address</label>
            <div class="">
                <textarea id="address" required name="address" wrap="soft" cols="3" type="text" class="form-control" value="@Model.Address">@Model.Address</textarea>
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label> Relationship</label>
            <div class="">
                <input id="relationship" required name="relationship" type="text" class="form-control" value="@Model.Relationship" />
            </div>
        </div>
    </div>


</div>

    


    <div class="modal-footer">
        <button type="submit" name="submitButton" class="btn btn-default">Add</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
    </div>
}






