@model AA.HRMS.Interfaces.IDisciplineView

@{
    ViewBag.Title = "View Discipline";
}



<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
    <div class="validation-summary-errors">
        @Html.ValidationSummary()
        @Model.ProcessingMessage
    </div>
</div>

@using (Html.BeginForm("EditDiscipline", "HR", FormMethod.Post, new { id = "addDiscipineForm" }))
{
    @Html.AntiForgeryToken()
<div class="modal-body">

    <input id="disciplineId" name="disciplineId" type="hidden" value="@Model.DisciplineId" />
    <input id="companyId" name="companyId" value="@Model.CompanyId" hidden />

    <div class="form-example-int">
        <div class="form-group">
            <label>Query Status:</label>
            <div class="">
                @Html.DropDownList("queryStatusId", Model.QueryDropDown, new { @class = "form-control", id = "queryStatusId", @disabled = "disable" })
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Action Taken:</label>

            <div class="">
                @Html.DropDownList("actionTakenId", Model.ActionTakenDropDown, new { @class="form-control", id = "actionTakenId", @disabled = "disable" })
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Employee Name:</label>

            <div class="">
                @Html.DropDownList("employeeId", Model.EmployeeDropDown, new { @class = "form-control", id = "employeeId", @disabled = "disable" })
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Offence:</label>
        </div>
        <div class="">
            <input id="offence" name="offence" disabled class="form-control" type="text" maxlength="50" value="@Model.Offence" />
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Query Date:</label>

            <div class="">
                <input id="queryDate" name="queryDate" disabled class="form-control" type="text" maxlength="50" value="@Model.QueryDate" />
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Investigator:</label>

            <div class="">
                <input id="investigator" name="investigator" disabled class="form-control" type="text" maxlength="50" value="@Model.Investigator" />
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Query Initiator:</label>

            <div class="">
                <input id="queryInitiator" name="queryInitiator" disabled class="form-control" type="text" maxlength="50" value="@Model.QueryInitiator" />
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Investigator Report:</label>

            <div class="">
                <textarea id="investigatorReport" disabled name="investigatorReport" class="form-control" value="@Model.InvestigatorReport">@Model.InvestigatorReport</textarea>
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Response:</label>

            <div class="">
                <textarea id="response" name="response" disabled class="form-control" value="@Model.Response">@Model.Response</textarea>
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Recommended Sanction:</label>

            <div class="">
                <input id="recommendedSanction" name="recommendedSanction" disabled class="form-control" value="@Model.RecommendedSanction" />
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Disciplinary Committee Recommended Sanction:</label>
            <div class="">
                <input id="disciplineCommitteeRecommendation" disabled name="disciplineCommitteeRecommendation" class="form-control" value="@Model.DisciplineCommitteeRecommendation" />
            </div>
        </div>
    </div>

</div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    </div>

}

<script type="text/javascript">
    $(document).ready(function () {

        $("span.ui-dialog-title").text('Edit Discipline');

        $('#btnCancel').click(function () {
            window.location.href = '/HR/DisciplineList';
            return false;
        });





    });
</script>