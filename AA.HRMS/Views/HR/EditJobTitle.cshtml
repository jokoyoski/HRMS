@model AA.HRMS.Interfaces.IJobTitleView

@{
    ViewBag.Title = "AA HRMS - Edit Job Title";
}



<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>


@using (Html.BeginForm("EditJobTitle", "HR", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.JobTitleId)

    <input type="hidden" name="companyId" value="@Model.CompanyId" />
    <input type="hidden" name="jobTitleId" value="@Model.JobTitleId" />


    <div class="modal-body">
        @Html.ValidationSummary()
        @Model.ProcessingMessage
        <div class="form-example-int">
            <div class="form-group">
                <label>Job Name</label>

                <div class="">
                    <input id="jobTitleName" name="jobTitleName" class="form-control ", type="text" value="@Model.JobTitleName" />
                </div>
            </div>
        </div>

        <div class="form-example-int">
            <div class="form-group">
                <label>Job Definition</label>

                <div class="">
                    <textarea id="jobDefinition" name="jobDefinition" class="form-control ",>@Model.JobDefinition</textarea>
                </div>
            </div>
        </div>
        <div class="form-example-int">
            <div class="form-group">
                <label>Job Function</label>

                <div class="">
                    <textarea id="jobFunction" name="jobFunction" class="form-control ",>@Model.JobFunction</textarea>
                </div>
            </div>
        </div>

            
        </div>
    <div class="modal-footer">
        <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Save Changes</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>
            }


           