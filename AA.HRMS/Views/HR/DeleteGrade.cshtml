@model AA.HRMS.Interfaces.IGradeView

@{
    ViewBag.Title = "Delete Grade";
}


@Html.ValidationSummary()
@Model.ProcessingMessage

<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>


@Html.ValidationSummary()
@Model.ProcessingMessage


@using (Html.BeginForm("DeleteGrade", "HR", FormMethod.Post))
{
    @Html.AntiForgeryToken()




<div class="modal-body">


    <input type="hidden" id="companyId" name="companyId" value="@Model.CompanyId" />
    <input type="hidden" id="gradeId" name="gradeId" value="@Model.GradeId" />

    <div class="form-example-int">
        <div class="form-group">
            <label>Name: </label> <strong>@Model.GradeName</strong>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Description: </label> <strong>@Model.GradeDescription</strong>
        </div>
    </div>

</div>
        <div class="modal-footer">
            <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Delete</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
        
  
}


