@model AA.HRMS.Interfaces.IDepartmentView

@{
    ViewBag.Title = "Edit Department";
}



<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

@Html.ValidationSummary()
@Model.ProcessingMessage


@using (Html.BeginForm("EditDepartment", "HR", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <input type="hidden" id="departmentId" name="departmentId" value="@Model.DepartmentId" />
    <input type="hidden" id="companyId" name="companyId" value="@Model.CompanyId" />


    <div class="modal-body">
        <div class="form-example-int">
            <div class="form-group">
                <label>Department Name</label>
                <div class="">
                    <input id="departmentname" name="DepartmentName" type="text" class="form-control", value="@Model.DepartmentName" />
                </div>
            </div>
        </div>



        <div class="form-example-int">
            <div class="form-group">
                <label>Department Description</label>
                <div class="">
                    <textarea id="Description" name="Description" type="text" class="form-control ", value="@Model.Description">@Model.Description</textarea>
                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Save Change</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>
}

