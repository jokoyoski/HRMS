@model AA.HRMS.Interfaces.IDepartmentView

@{
    ViewBag.Title = "Delete Department";
}

<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>


        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>

    @using (Html.BeginForm("DeleteDepartment", "HR", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="departmentId" id="departmentId" value="@Model.DepartmentId" />
        <input value="@Model.CompanyId" name="companyId" hidden />
        
        <div class="modal-body">

            <div class="form-example-int">
                <div class="form-group">
                    <label>Department Name: </label> <label><strong>@Model.DepartmentName</strong></label>
                </div>
            </div>



        <div class="form-example-int">
            <div class="form-group">
                <label>Department Description</label>
                <div class="">
                    <textarea id="Description" disabled name="Description" type="text" class="form-control ", value="@Model.Description">@Model.Description</textarea>
                </div>
            </div>
        </div>

   </div>

        <div class="modal-footer">
            <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Delete</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>


    }