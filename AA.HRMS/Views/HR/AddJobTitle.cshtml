@model AA.HRMS.Interfaces.IJobTitleView

@{
    ViewBag.Title = "Add Job Title";

    string compulsoryFields = "";
}



<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>


            

    @using (Html.BeginForm("AddJobTitle", "HR", FormMethod.Post, new { enctype = "multipart/form-data", encoding = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.JobTitleId)

        <div class="modal-body">
            @Html.ValidationSummary()
            @Model.ProcessingMessage

            <input  name="companyId" value="@Model.CompanyId" hidden />

            <div id="request">

                <div class="form-example-int">
                    <div class="form-group">
                        <label>Job Name</label>

                        <div class="">
                            <input id="jobTitleName" name="jobTitleName" class="form-control " , type="text" value="@Model.JobTitleName" />
                        </div>
                    </div>
                </div>

                <div class="form-example-int">
                    <div class="form-group">
                        <label>Job Definition</label>

                        <div class="">
                            <textarea id="jobDefinition" name="jobDefinition" class="form-control ">@Model.JobDefinition</textarea>
                        </div>
                    </div>
                </div>
                
                <div class="form-example-int">
                    <div class="form-group">
                        <label>Job Function</label>

                        <div class="">
                            <textarea id="jobFunction" name="jobFunction" class="form-control ">@Model.JobFunction</textarea>
                        </div>
                    </div>
                </div>

            </div>
            
            <div class="form-example-int">
                <div class="form-group">
                    <div class="">
                        <input type="checkbox" id="myCheck" onclick="myFunction()" name="rad" />
                        <label>Upload an Excel Sheet Instead</label>
                    </div>
                </div>
            </div>

            <div id="text" class="modal-body" style="display:none">

                <div class="form-example-int">
                    <div class="form-group">
                        <div class="">
                            <label>Upload File</label>
                            <input data-toggle="tooltip" data-placement="left" title="Upload Level Excel Sheet" type="file" class="btn" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" name="jobTitleExcelFile" value="" />
                        </div>
                    </div>
                </div>

                <div class="form-example-int">
                    <div class="form-group">
                        <div class="">
                            <label>Excel Format</label>
                            <img src="~/Images/Job_Title_Excel_Image.PNG" alt="Level Sample" />
                        </div>

                    </div>
                </div>
            </div>
            
        </div>



        <div class="modal-footer">
            <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Add</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
    }


<script type="text/javascript">

    function myFunction() {
        // Get the checkbox
        var checkBox = document.getElementById("myCheck");
        // Get the output textbox
        var text = document.getElementById("text");
        var request = document.getElementById("request");

        // If the checkbox is checked, display the output textbox
        if (checkBox.checked == true) {
            text.style.display = "block";
            request.style.display = "none"
            @(compulsoryFields = "")

        } else {
            text.style.display = "none";
            request.style.display = "block"
            @(compulsoryFields = "required")
        }
    }
</script>