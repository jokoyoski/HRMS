



@model AA.HRMS.Interfaces.ITrainingHistoryViewModel

@{
    ViewBag.Title = "AA HRMS - Training | Edit TrainingHistor";
}

<h2>Delete Appraisal</h2>

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.processingmessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteTrainingHistory", "Training", FormMethod.Post, new { id = "DeleteTrainingHistory", enctype = "multipart/form-data", encoding = "multipart/form-data" }))

    {
        @Html.AntiForgeryToken()



        <input type="hidden" name="UserId" id="UserId" value="@Model.UserId" />
        <input type="hidden" name="TrainingHistoryId" id="TrainingHistoryId" value="@Model.TrainingHistoryId" />

        <div class="columns" style="width: 100%; padding-top: 5px;">
           <text>Sure to delete This record?</text>
            </div>








            <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
                <div class="column" style="margin-left: 195px;">
                    <input class="blueButton" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete Record" />
                </div>
                <div class="column" style="margin-left: 15px;">
                    <input id="btnCancel" class="blueButton" name="submitButton" style="width: 80px;"
                           type="submit" value="Cancel" />
                </div>
                <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                    You must enter all information above correctly to enable submission.
                </div>
            </div>
            }
        </div>

<script type="text/javascript">
    $(document).ready(function () {

        $("span.ui-dialog-title").text(' Delete TrainingHistory');

        $('#btnCancel').click(function () {
            window.location.href = '/Training/TrainingHistoryList';
            return false;
        });

        $('#TrainingName').change(function () {
            $('#TrainingName').trigger("propertychange");
        });

        $('#TrainingVendor').change(function () {
            $('#TrainingName').trigger("propertychange");
        });

        $('#TrainingName').bind('input propertychange', function () {
            $('#btnSubmit').prop("class", "grayButton");
            $('#btnSubmit').prop("disabled", true);

            var EmployeeOkay = $('#TrainingVendor').val() > 0;

            if (EmployeeOkay) {
                $('#btnSubmit').prop("class", "blueButton");
                $('#btnSubmit').prop("disabled", false);
            }
        });

        //$('#addDeptForm').submit(function () {
        //    //window.open('', 'formpopup', 'width=400,height=400,resizeable,scrollbars');
        //    this.target = '$popupDialog';
        //});

    });
</script>






