
@model AA.HRMS.Interfaces.ITrainingView


@{
    ViewBag.Title = "AA HRMS - View Training";
}

<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

%

@Html.ValidationSummary()
@Model.ProcessingMessage
@using (Html.BeginForm("ViewTraining", "Training", FormMethod.Post, new { id = "Training", enctype = "multipart/form-data", encoding = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()


    <div class="modal-body">
        <div class="form-example-int">
            <div class="form-group">
                <label>Training Name</label>
                <div class="nk-int-st">
                    <input id="TrainingName" name="TrainingName" class="form-control input-sm" value="@Model.TrainingName" />
                </div>
            </div>
        </div>



        <div class="modal-body">
            <div class="form-example-int">
                <div class="form-group">
                    <label>Training Description</label>
                    <div class="nk-int-st">
                        <input id="TrainingDescription" name="TrainingDescription" class="form-control input-sm" value="@Model.TrainingDescription" />
                    </div>
                </div>
            </div>


            <div class="form-example-int">
                <div class="form-group">
                    <label>companyId</label>
                    <div class="nk-int-st">
                        @Html.DropDownList("companyId", Model.CompanyDropDown, new { @class = "form-control", id = "companyId", @disabled = "disabled" })
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>

    <input type="hidden" name="TrainingId" id="AppraisalId" value="@Model.TrainingID" />
    <input type="hidden" name="TrainingName" id="employeeId" value="@Model.TrainingID" />
    <input type="hidden" name="TrainingDescription" id="companyId" value="@Model.TrainingDescription" />
    <input type="hidden" id="companyId" name="appraisalYear" value="@Model.CompanyID" />

}
