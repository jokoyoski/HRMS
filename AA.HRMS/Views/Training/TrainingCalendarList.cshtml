@using AA.HRMS.Interfaces.ValueTypes
@model AA.HRMS.Interfaces.ITrainingCalendarListView

@{
    ViewBag.Title = "Training Calender";
    var hasInfo = ((Model != null) && (Model.TrainingCalendarCollection != null) && Model.TrainingCalendarCollection.Any());


    var roles = (String[])HttpContext.Current.Session[SessionKey.UserRoles];
}





<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@ViewBag.Title</h2>
                                </div>
                            </div>
                        </div>
                        @if (!roles.Contains("Employee"))
                        {
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                                <div class="breadcomb-report">
                                    <button class="btn" onclick="createModal('/training/addtrainingcalendar')" data-placement="left" title="Add Training Calender"><i class="notika-icon notika-plus-symbol"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ProcessingMessage))
{
    <div class="container">
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Model.ProcessingMessage
        </div>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{

    <div class="container">
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Html.ValidationSummary()
        </div>
    </div>
}

@if (hasInfo)
{
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Company Name</th>
                                        <th>Training Name</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Start</th>
                                        <th>End</th>
                                        <th>Action</th>
                                        @if (!roles.Contains("Employee"))
                                        {
                                            <th>Action</th>
                                        }

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in Model.TrainingCalendarCollection)
                                    {
                                        <tr>
                                            <td>
                                                @d.CompanyName
                                            </td>
                                            <td>
                                                @d.TrainingName
                                            </td>
                                            <td>
                                                @d.Location
                                            </td>
                                            <td>
                                                @d.TrainingStatusName
                                            </td>
                                            <td>
                                                @d.DeliveryStartDate
                                            </td>
                                            <td>
                                                @d.DeliveryEndDate
                                            </td>

                                            <td>
                                                <button class="btn btn-sm btn-primary" onclick="editModal('/Training/EditTrainingCalendar?trainingCalendarId=@d.TrainingCalenderId')" data-placement="left" title="Edit Training">Modify</button>
                                            </td>
                                            @if (!roles.Contains("Employee"))
                                            {
                                                <td>
                                                    <button class="btn btn-sm btn-danger" onclick="deleteModal('/Training/DeleteTrainingCalendar?trainingCalendarId=@d.TrainingCalenderId')" data-placement="left" title="Delete Delete">Delete</button>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Company</th>
                                        <th>Training</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Start</th>
                                        <th>End</th>
                                        <th>Action</th>
                                        @if (!roles.Contains("Employee"))
                                        {
                                            <th>Action</th>
                                        }
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-info alert-mg-b-0" role="alert">
                    <p>No Training Calendar Exist</p>
                </div>
            </div>
        </div>
    </div>

}



<div class="modal fade" id="createModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayCreate">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayEdit">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayDelete">

            </div>
        </div>
    </div>
</div>

<script>

    var URL = "";

    function createModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayCreate").html(data);
            }
        });

        $("#createModal").modal();
    }

    function editModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayEdit").html(data);
            }
        });

        $("#editModal").modal();

    }

    function deleteModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayDelete").html(data);
            }
        });

        $("#deleteModal").modal();

    }

</script>