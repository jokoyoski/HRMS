@model AA.HRMS.Interfaces.IUsersView
@{
    ViewBag.Title = "AA HRMS - Registration";
}
<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("Register", "Users", FormMethod.Post
    ))
    {
        @Html.AntiForgeryToken()
        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>First Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="firstName" name="firstName" style="width: 250px;" type="text" maxlength="50" value="@Model.FirstName" />
            </div>
        </div>
        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Last Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="lastName" name="lastName" style="width: 250px;" type="text" maxlength="50" value="@Model.LastName" />
            </div>
        </div>
        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Company ID:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input id="companyName" name="companyId" style="width: 250px;" type="text" maxlength="50" value="@Model.CompanyId" />
            </div>
        </div>

