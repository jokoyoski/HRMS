@model AA.HRMS.Interfaces.ICompanyListView

@{
    Layout = null;

    var hasCompanyCollection = Model.CompanyCollection != null && Model.CompanyCollection.Count > 0;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>AAHRMS | My Companies</title>
    <!--meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="AAHRMS, HRMS, Human Resource, AAHRM, Human Resource Management System, Human Resource Management Solution, Human Resource Management" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!--//meta tags ends here-->
    <!--booststrap-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" media="all">
    <!--//booststrap end-->
    <!-- font-awesome icons -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <!--stylesheets-->
    <link href="~/Content/mycompaniesStyle.css" rel='stylesheet' type='text/css' media="all">
    <!--//stylesheets-->
    <link href="//fonts.googleapis.com/css?family=Mukta+Malar:400,500,600,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">
</head>
<body>
    <!--banner -->
    <div class="header-w3layouts">
        <!--//navigation section -->
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="hedder-up">
                <h1><a class="navbar-brand" href="#">AAHRMS</a></h1>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">

                <div class="both-butns">
                    <ul>
                        <li>
                            <div class="contact-hedder">
                                <a href="/Home/Index">
                                    Home
                                </a>
                            </div>
                        </li>
                        

                        <li>
                            <div class="contact-hedder">
                                <a href="/Account/LogOff">
                                    Logout
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!--//navigation section -->
        <div class="clearfix"> </div>
    </div>
    <!--//headder-->
    <!-- banner -->
    <div class="inner_page-banner one-img">
    </div>
    <!--//banner -->
    <!--team-->
    <section class="team align-middle py-lg-4 py-md-3 py-sm-3 py-3">
        <div class="container py-lg-5 py-md-5 py-sm-4 py-3">
            <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Your Companies</h3>
            @* <div class="row pt-lg-5 pt-md-5 pt-sm-4 pt-3"> *@

            @if (hasCompanyCollection)
            {
                <div class="row">
                @foreach (var company in Model.CompanyCollection)
                {

                    var hasImage = company.CompanyLogo != null;

                    var imgSrc = "/Images/avt.jpg";

                    if (hasImage)
                    {
                        var base64 = Convert.ToBase64String(company.CompanyLogo.TheDigitalFile);
                        imgSrc = string.Format("data:{0};base64,{1}", company.CompanyLogo.ContentType, base64);
                    }

                    if (Model.CompanyCollection.Count.ToString() == "2")
                    {
                                                   
                            <div class="col-lg-6 col-md-6 col-sm-6 text-center">
                                <div class="col-lg-11">
                                    <div class="team-position">
                                        <div class="icon-wthree-top">
                                            <img src="@imgSrc" alt="" class="img-fluid">
                                        </div>
                                        <div class="team-text-wthree">
                                            <h4>
                                                @company.CompanyAlias
                                            </h4>
                                            <p class="mt-3">@company.CompanyName</p>
                                            <p class="">@company.CACRegistrationNumber</p>
                                            <p class="">@company.CompanyEmail</p>
                                            <p class="">@company.CompanyWebsite</p>
                                        </div>
                                        @using (Html.BeginForm("MyCompanies", "Account", FormMethod.Post))
                                        {
                                            <div class="icons-client text-center">
                                                <button class="btn btn-sm btn-primary" type="submit" name="companyId" value="@company.CompanyId">Select Company</button>
                                            </div>
                                        }

                                    </div>
                                </div>

                            </div>
                        
                    }
                    else if (Model.CompanyCollection.Count.ToString() == "1")
                    {
                        
                        <div class="col-lg-12 col-md-6 col-sm-6 ser-icon text-center">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-4">
                                <div class="team-position">
                                    <div class="icon-wthree-top">
                                        <img src="@imgSrc" alt="" class="img-fluid">
                                    </div>
                                    <div class="team-text-wthree">
                                        <h4>
                                            @company.CompanyAlias
                                        </h4>
                                        <p class="mt-3">@company.CompanyName</p>
                                        <p class="">@company.CACRegistrationNumber</p>
                                        <p class="">@company.CompanyEmail</p>
                                        <p class="">@company.CompanyWebsite</p>
                                    </div>
                                    @using (Html.BeginForm("MyCompanies", "Account", FormMethod.Post))
                                    {
                                        <div class="icons-client text-center">
                                            <button class="btn btn-sm btn-primary" type="submit" name="companyId" value="@company.CompanyId">Select Company</button>
                                        </div>
                                    }

                                </div>
                            </div>
                            <div class="col-lg-4"></div>
                        </div>
                       
                    }
                    else
                    {
                        
                        <div class="col-lg-3 col-md-6 col-sm-6 ser-icon text-center">
                            <div class="team-position">
                                <div class="icon-wthree-top">
                                    <img src="@imgSrc" alt="" class="img-fluid">
                                </div>
                                <div class="team-text-wthree">
                                    <h4>
                                        @company.CompanyAlias
                                    </h4>
                                    <p class="mt-3">@company.CompanyName</p>
                                    <p class="">@company.CACRegistrationNumber</p>
                                    <p class="">@company.CompanyEmail</p>
                                    <p class="">@company.CompanyWebsite</p>
                                </div>
                                @using (Html.BeginForm("MyCompanies", "Account", FormMethod.Post))
                                {
                                    <div class="icons-client text-center">
                                        <button class="btn btn-sm btn-primary" type="submit" name="companyId" value="@company.CompanyId">Select Company</button>
                                    </div>
                                }

                            </div>
                        </div>
                        
                    }
                }
                </div>

            }
            else
            {
                <div class="col-md-12 col-lg-12 col-12 text-center">
                    <div class="alert alert-danger text-danger"><i class="fa fa-exclamation"></i> You Do not have a Company</div>
                    <a href="/Administration/InitialCompanyRegistration" class="btn btn-primary">Create Company</a>
                </div>
            }


        </div>
        @* </div> *@
    </section>
    <!--//team-->

    <div class="modal fade" id="createModal" role="dialog">
        <div class="modal-dialog modals-default">
            <div class="modal-content">
                <div id="displayCreate">

                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <!--js working-->
    <script src='js/jquery-2.2.3.min.js'></script>
    <!--//js working-->
    <!-- start-smoth-scrolling -->
    <script src="js/move-top.js"></script>
    <script src="js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <!-- start-smoth-scrolling -->
    <!-- here stars scrolling icon -->
    <script>
        $(document).ready(function () {

            var defaults = {
                containerID: 'toTop', // fading element id
                containerHoverID: 'toTopHover', // fading element hover id
                scrollSpeed: 1200,
                easingType: 'linear'
            };


            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <script>
        var URL = "";

        function createModal(URL) {

            $.ajax({
                type: "GET",
                url: URL,
                success: function (data) {
                    $("#displayCreate").html(data);
                }
            });


            $("#createModal").modal();
        }

    </script>
        <!-- //here ends scrolling icon -->
    <!--bootstrap working-->
    <script src="js/bootstrap.min.js"></script>
    <!-- //bootstrap working-->
</body>
</html>