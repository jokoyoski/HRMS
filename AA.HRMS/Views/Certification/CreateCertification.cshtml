@model AA.HRMS.Interfaces.ICertificateViewModel
CreateCertification

<script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
@{
    ViewBag.Title = "AA HRMS - Add New Certification";
}
@section PageTitle{
   
}
<div>
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>

    @using (Html.BeginForm("CreateCertification", "Certification", FormMethod.Post, new { id = "CreateCertification" }))
    {
        @Html.AntiForgeryToken()


        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Name Of certificate:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input type="text" name="CertificationName" value="@Model.CertificationName" id="CertificationName" />

            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                certificate Description:
            </div>
            <div class="data column" style="overflow: hidden;">
                <textarea name="Description" value="@Model.Description" id="Description"></textarea> 
            </div>
        </div>

        <input type="hidden" id="userId" name="userId" value="@Model.UserId" />

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Select Year:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input type="date" name="Year" value="@Model.Year" id="Year" />

            </div>
        </div>

      



        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="modal-footer">
                <button type="button" name="submitButton" class="btn btn-default" data-dismiss="modal">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                You must enter all information above correctly to enable submission.
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $("span.ui-dialog-title").text(' Add New Certification');

        $('#btnCancel').click(function () {
            window.location.href = '/Certification/CertificationList?userId=@Model.UserId';
            return false;
        });

        $('#Description').change(function () {
            $('#Description').trigger("propertychange");
        });

        $('#Description').change(function () {
            $('#Description').trigger("propertychange");
        });

        $('#Description').bind('input propertychange', function () {
            $('#btnSubmit').prop("class", "grayButton");
            $('#btnSubmit').prop("disabled", false);

            var EmployeeOkay = $('#Description').val() > 0;

            if (EmployeeOkay) {
                $('#btnSubmit').prop("class", "blueButton");
                $('#btnSubmit').prop("disabled", false);
            }
        });

        //$('#addDeptForm').submit(function () {
        //    window.open('', 'formpopup', 'width=400,height=400,resizeable,scrollbars');
        //    this.target = '$popupDialog';
        //});

    });
</script>



