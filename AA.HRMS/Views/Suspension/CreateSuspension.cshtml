@model AA.HRMS.Interfaces.ISuspensionView

@{
    ViewBag.Title = "AA HRMS - Add New Suspension";
}

@section PageTitle{
    Create Suspension
<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    }

    @using (Html.BeginForm("CreateSuspension", "Suspension", FormMethod.Post, new { id = "CreateSuspension" }))
    {
        @Html.AntiForgeryToken()

        <input name="companyId" value="@Model.CompanyId" hidden />

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Query:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("QueryId", Model.QueryDropDown, new { style = "width:204px;height:20px;", id = "QueryId" })
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Employee Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("EmployeeId", Model.EmployeeDropDown, new { style = "width:204px;height:20px;", id = "EmployeeId" })
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Start Date:
          </div>
            <div class="data column" style="overflow: hidden;">
              <input type="date" id="StartDate"  name="StartDate"  style = "width:204px;height:20px;"  value="@Model.StartDate"   >  
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>End Date:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input type="date" id="EndDate" name="EndDate" style="width:204px;height:20px;" value="@Model.EndDate">
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Pecentage:
            </div>
            <div class="data column" style="overflow: hidden;">
                <input type="range" id="Percentage" name="Percentage" style="width:204px;height:20px;" value="@Model.Percentage">
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="modal-footer">
                <button type="button" name="submitButton" class="btn btn-default" data-dismiss="modal">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                You must enter all information above correctly to enable submission.
            </div>
        </div>

     }
</div>

<script type="text/javascript">

        $(document).ready(function () {

            $("span.ui-dialog-title").text('Add New Suspension');

            $('#btnCancel').click(function () {
                window.location.href = '/Suspension/SuspensionList';
                return false;
            });

            $('#SuspensionId').change(function () {
                $('#EmployeeId').trigger("propertychange");
            });

            $('#SuspensionId').change(function () {
                $('#EmployeeId').trigger("propertychange");
            });

            $('#SuspensionId').bind('input propertychange', function () {
                $('#btnSubmit').prop("class", "grayButton");
                $('#btnSubmit').prop("disabled", true);

                var EmployeeOkay = $('#SuspensionId').val() > 0;

                if (EmployeeOkay) {
                    $('#btnSubmit').prop("class", "blueButton");
                    $('#btnSubmit').prop("disabled", false);
                }
            });

        });

</script>
