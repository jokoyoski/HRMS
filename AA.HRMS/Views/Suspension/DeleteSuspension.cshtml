
@model AA.HRMS.Interfaces.ISuspensionView

@{
    ViewBag.Title = "Delete Suspension";
}

@section PageTitle{
    Delete Suspension
}

<div class="jumbotron">
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>
    @using (Html.BeginForm("DeleteSuspension", "Suspension", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        
        <input type="hidden" name="suspensionId" value="@Model.SuspensionId" />

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                Query:
            </div>
            <div class="data column" style="overflow: hidden;">
                <label id="queryName" name="queryName" style="width: 250px;" type="text" maxlength="50">@Model.QueryName</label>
            </div>
        </div>

        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="modal-footer">
                <button type="button" name="submitButton" class="btn btn-default" data-dismiss="modal">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("span.ui-dialog-title").text('Delete Suspension ' + $('#SuspensionId').val());

        $('#btnCancel').click(function () {
            window.location.href = '/Administration/SuspensionList?CompanyId=' + @Model.CompanyId ;
            return false;
        });
    });
</script>





