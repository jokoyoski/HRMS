
@model AA.HRMS.Interfaces.IEmployeeTrainingView

@{
    ViewBag.Title = "Delete Training";
}



<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
@Html.ValidationSummary()
@Model.ProcessingMessage

@using (Html.BeginForm("DeleteEmployeeTraining", "EmployeeTraining", FormMethod.Post, new { id = "EmplyoyeeTrainingName", enctype = "multipart/form-data", encoding = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="modal-body">


        <input type="hidden" name="trainingId" id="trainingId" value="@Model.TrainingId" />
        <input type="hidden" name="employeeId" id="employeeId" value="@Model.EmployeeId" />
        <input type="hidden" name="companyId" id="companyId" value="@Model.CompanyId" />
        <input type="hidden" id="supervisorId" name="supervisorId" value="@Model.SupervisorId" />
        <input type="hidden" id="employeeTrainingId" name="employeeTrainingId" value="@Model.EmployeeTrainingId" />

        <div class="form-example-int">
            <div class="form-group">
                <label>Training</label>
                <div class="nk-int-st">
                    @Html.DropDownList("TrainingId", Model.TrainingDropDownList, new { @class = "form-control", id = "TrainingId", @disabled = "disabled" })
                </div>
            </div>
        </div>




        <div class="form-example-int">
            <div class="form-group">
                <label>Employees</label>
                <div class="nk-int-st">
                    @Html.DropDownList("EmployeeId", Model.EmployeeDropDownList, new { @class = "form-control", id = "EmployeeId", @disabled = "disabled" })
                </div>
            </div>
        </div>
        <div class="form-example-int">
            <div class="form-group">
                <label>Supervisor Name</label>
                <div class="nk-int-st">
                    @Html.DropDownList("SupervisorId", Model.EmployeeDropDownList, new { @class = "form-control", id = "SupervisorId", @disabled = "disabled" })
                </div>
            </div>
        </div>




        <div class="form-example-int">
            <div class="form-group">
                <label>Approve Training</label>
                <div class="nk-int-st">
                    @Html.DropDownList("IsApproved", new SelectListItem[]{
               new SelectListItem() {Text = "Approve", Value="true"},
               new SelectListItem() {Text = "Disapprove", Value="false"}}, "[Select Approval]", new { @class = "form-control", id = "IsApproved", @disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>


    <div class="modal-footer">
        <button type="submit" name="submitButton" class="btn btn-default">Delete</button>
        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    </div>


    <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
        You must enter all information above correctly to enable submission.
    </div>

}
