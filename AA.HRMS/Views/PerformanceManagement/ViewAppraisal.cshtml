@model AA.HRMS.Interfaces.IAppraisalView

@{
    ViewBag.Title = "View Appraisal";
}

<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>


           

<div class="modal-body">

    @if (!string.IsNullOrEmpty(Model.ProcessingMessage))
    {

        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Model.ProcessingMessage
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Html.ValidationSummary()
        </div>
    }

    @Html.AntiForgeryToken()



    <input type="hidden" name="AppraisalId" id="AppraisalId" value="@Model.AppraisalId" />
    <input type="hidden" name="employeeId" id="employeeId" value="@Model.EmployeeId" />
    <input type="hidden" name="companyId" id="companyId" value="@Model.CompanyId" />
    <input type="hidden" id="appraisalYear" name="appraisalYear" value="@Model.AppraisalYear" />
    <input type="hidden" id="appraisalPeriod" name="appraisalPeriod" value="@Model.AppraisalPeriod" />
    <input type="hidden" id="initiationDate" name="initiationDate" value="@Model.InitiationDate" />
    <input type="hidden" id="appraisalAgreedDate" name="appraisalAgreedDate" value="@Model.AppraisalAgreedDate" />

    <div class="form-example-int">
        <div class="form-group">
            <label>Appraisal Period</label>
            <div class="">
                @Html.DropDownList("AppraiserId", Model.AppraiserDropDown, new { @class = "form-control", id = "AppraiserId", @disabled = "disabled" })
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Appraisal Summary</label>
            <div class="">
                <textarea name="AppraisalSummary" class="form-control" id="AppraisalSummary" disabled type="text" maxlength="500" value="@Model.AppraisalSummary">@Model.AppraisalSummary</textarea>
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Key Strength</label>
            <div class="">
                <textarea name="KeyStrength" class="form-control" type="text" maxlength="500" disabled id=" KeyStrength" value="@Model.KeyStrength">@Model.KeyStrength</textarea>
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Areas Of Improvement</label>
            <div class="">
                <textarea name="AreasOfImprovement" class="form-control" type="text" disabled maxlength="500" value="@Model.AreasOfImprovement">@Model.AreasOfImprovement</textarea>
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Appraiser Rating</label>
            <div class="">
                @Html.DropDownList("AppraiserRatingId", Model.AppraisalRatingDropDown, new { @class = "form-control", id = "AppraisalRatingId", @disabled = "disabled" })
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Appraisal Agreed Date</label>
            <div class="">
                <label>@Model.AppraisalAgreedDate</label>
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Recommended Action</label>
            <div class="">
                @Html.DropDownList("RecommendedActionId", Model.AppraisalApprovedActionDropDown, new { @class = "form-control", id = "RecommendedActionId", @disabled = "disabled" })
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Date Approved</label>
            <div class="">
                <input id="DateApproved" disabled type="text" name="DateApproved" class="form-control" value="@Model.DateApproved" />
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Final Rating</label>
            <div class="">
                @Html.DropDownList("FinalRatingId", Model.AppraisalFinalRatingDropDown, new { @class = "form-control", id = "FinalRatingId", @disabled = "disabled" })
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Approved Action</label>
            <div class="">
                @Html.DropDownList("ApprovedActionId", Model.AppraisalApprovedActionDropDown, new { @class = "form-control", id = "ApprovedActionId", @disabled = "disabled" })
            </div>
        </div>
    </div>

    <div class="form-example-int">
        <div class="form-group">
            <label>Approved Action Effective Date</label>
            <div class="">
                <input id="ApprovedActionEffectiveDate" disabled name="ApprovedActionEffectiveDate" class="form-control" value="@Model.ApprovedActionEffectiveDate" />
            </div>
        </div>
    </div>



</div>

        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
         
   





