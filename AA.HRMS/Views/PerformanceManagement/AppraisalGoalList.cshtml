@using AA.HRMS.Interfaces.ValueTypes
@model AA.HRMS.Interfaces.IAppraisalGoalListView

@{
    ViewBag.Title = "Appraisal Goal List";
    var hasInfo = (Model != null) && (Model.AppraisalCollection.Any());
    var role = (String[])HttpContext.Current.Session[SessionKey.UserRoles];
}



<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@ViewBag.Title</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                @if (role.Contains("Supervisor") || role.Contains("CompanyAdmin"))
                                {
                                    <a class="btn" data-toggle="tooltip" href="~/PerformanceManagement/CreateAppraisalGoal?employeeAppraisalId=@Model.EmployeeAppraisal.EmployeeAppraisalId&url=@Model.URL" data-placement="left" title="Create Appraisal Goals"><i class="notika-icon notika-plus-symbol"></i></a>

                                    <a class="btn" data-toggle="tooltip" href="@Model.URL" data-placement="right" title="Back"><i class="notika-icon notika-back"></i></a>

                                 }
                                  else
                                 {
                                            

                                      <a class="btn" data-toggle="tooltip" href="@Model.URL" data-placement="right" title="Back"><i class="notika-icon notika-back"></i></a>
                               
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ProcessingMessage))
{
    <div>
        <div class="container">
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Model.ProcessingMessage
            </div>

        </div>
    </div>
}




@if (hasInfo)
{
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th> Goal</th>
                                        <th> Measurements</th>
                                        <th> Outcome</th>
                                        <th>Action</th>
                                        @if (role.Contains("CompanyAdmin") || role.Contains("Supervisor"))
                                        {
                                            <th>Action</th>
                                            <th>Action</th>
                                        }
                                    </tr>
                                <tbody>
                                    @foreach (var d in Model.AppraisalCollection)
                                    {
                                        <tr>
                                            <td>
                                                @d.Goal
                                            </td>
                                            <td>
                                                @d.Measurements
                                            </td>
                                            <td>
                                                @d.Outcome
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-primary" onclick="editModal('/PerformanceManagement/ViewAppraisalGoal?appraisalGoalId=@d.AppraisalGoalId&url=@Model.URL')" data-placement="left" title="Edit Appraisal Goal">View</button>
                                            </td>
                                            @if (role.Contains("CompanyAdmin") || role.Contains("Supervisor"))
                                            {
                                                <td>
                                                    <button class="btn btn-sm btn-primary" onclick="editModal('/PerformanceManagement/EditAppraisalGoal?appraisalGoalId=@d.AppraisalGoalId&url=@Model.URL')" data-placement="left" title="Edit Appraisal Goal">Modify</button>
                                                </td>
                                                <td>
                                                    <a class="btn btn-sm btn-danger" onclick="deleteModal('/PerformanceManagement/DeleteAppraisalGoal?appraisalGoalId=@d.AppraisalGoalId&url=@Model.URL')" data-placement="left" title="Delete Appraisal Goal">Delete</a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th> Goal</th>
                                        <th> Measurements</th>
                                        <th> Outcome</th>
                                        <th>Action</th>
                                        @if (role.Contains("CompanyAdmin") || role.Contains("Supervisor"))
                                        {
                                            <th>Action</th>
                                            <th>Action</th>
                                        }
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-info alert-mg-b-0" role="alert">
                    <p>No Appraisal Goal</p>
                </div>
            </div>
        </div>
    </div>
}




<div class="modal fade" id="createModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayCreate">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayEdit">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayDelete">

            </div>
        </div>
    </div>
</div>

<script>
    var URL = "";

    function createModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayCreate").html(data);
            }
        });


        $("#createModal").modal();
    }

    function editModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayEdit").html(data);
            }
        });

        $("#editModal").modal();

    }

    function deleteModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayDelete").html(data);
            }
        });

        $("#deleteModal").modal();

    }

</script>

