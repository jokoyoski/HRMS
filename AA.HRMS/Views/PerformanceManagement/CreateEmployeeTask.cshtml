@model AA.HRMS.Interfaces.IEmployeeTaskView

@{
    ViewBag.Title = "Add Employee Task";
}



<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

@Html.ValidationSummary()



@using (Html.BeginForm("CreateEmployeeTask", "performanceManagement", FormMethod.Post, new { enctype = "multipart/form-data", encoding = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="modal-body">

        <input value="@Model.AppraisalGoalId" name="appraisalGoalId" hidden />


        <div class="form-example-int">
            <div class="form-group">
                <label>Task Name</label>
                <div class="">
                    <input required id="taskName" name="taskName" type="text" class="form-control" value="@Model.TaskName" />
                </div>
            </div>
        </div>



        <div class="form-example-int">
            <div class="form-group">
                <label>Task Description</label>
                <div class="">
                    <textarea id="taskDescription" name="taskDescription" type="text" class="form-control" value="@Model.TaskDescription"></textarea>
                </div>
            </div>
        </div>

        <div class="form-example-int">
            <div class="form-group">
                <label>Start Date</label>
                <div class="">
                    <input id="startDate" name="startDate" type="datetime-local" class="form-control" value="@Model.StartDate" />
                </div>
            </div>
        </div>

        <div class="form-example-int">
            <div class="form-group">
                <label>End Date</label>
                <div class="">
                    <input id="departmentname" name="endDate" type="datetime-local" class="form-control" value="" />
                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Add</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>

}