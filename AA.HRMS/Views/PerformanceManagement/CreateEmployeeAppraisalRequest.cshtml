@model AA.HRMS.Interfaces.IAppraisalView

<script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
@{
    ViewBag.Title = "AA HRMS - Add New Employee Appraisal Request";
}
@section PageTitle{
    Apply for Appraisal
}
<div>
    <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
        <div class="validation-summary-errors">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
        </div>
    </div>

    @using (Html.BeginForm("CreateEmployeeAppraisalRequest", "Appraisal", FormMethod.Post, new { id = "CreateEmployeeAppraisalRequest" }))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" id=" employeeId" name="employeeId" value="@Model.EmployeeId" />
        <input type="hidden" id=" companyId" name="companyId" value="@Model.CompanyId" />

        <div class="columns" style="width: 100%; padding-top: 5px;">
            <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                <span class="required">*</span>Supervisor Name:
            </div>
            <div class="data column" style="overflow: hidden;">
                @Html.DropDownList("SupervisorId", Model.EmployeeDropDownList, new { style = "width:204px;height:20px;", id = "SupervisorId" })
            </div>
        </div>



        <div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
            <div class="column" style="margin-left: 195px;">
                <input class="grayButton" id="btnSubmit" name="submitButton" style="width: 80px;" disabled type="submit" value="Submit" />
            </div>
            <div class="column" style="margin-left: 15px;">
                <input id="btnCancel" class="blueButton" name="submitButton" style="width: 80px;"
                       type="submit" value="Cancel" />
            </div>
            <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                You must enter all information above correctly to enable submission.
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $("span.ui-dialog-title").text(' Add New Employee Appraisal-Request');

        $('#btnCancel').click(function () {
            window.location.href = '/Appraisal/EmployeeSpecificAppraisalList';
            return false;
        });

        $('#AppraisalId').change(function () {
            $('#AppraisalId').trigger("propertychange");
        });

        $('#AppraisalId').change(function () {
            $('#AppraisalId').trigger("propertychange");
        });

        $('#AppraisalId').bind('input propertychange', function () {
            $('#btnSubmit').prop("class", "grayButton");
            $('#btnSubmit').prop("disabled", true);

            var EmployeeOkay = $('#AppraisalId').val() > 0;

            if (EmployeeOkay) {
                $('#btnSubmit').prop("class", "blueButton");
                $('#btnSubmit').prop("disabled", false);
            }
        });

        $('#addDeptForm').submit(function () {
            window.open('', 'formpopup', 'width=400,height=400,resizeable,scrollbars');
            this.target = '$popupDialog';
        });

    });
</script>


