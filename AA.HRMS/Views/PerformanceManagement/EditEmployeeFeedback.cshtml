@model AA.HRMS.Interfaces.IEmployeeFeedbackViewModel

@{
    ViewBag.Title = "Edit Employee FeedBack";
}




<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<hr /><br />

@using (Html.BeginForm("EditEmployeeFeedback", "PerformanceManagement", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <div class="modal-body">

        @if (!string.IsNullOrEmpty(Model.ProcessingMessage))
        {
            <div>
                <div class="container">
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Model.ProcessingMessage
                    </div>

                </div>
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div>
                <div class="container">
                    <div class="alert alert-info alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Html.ValidationSummary()
                    </div>
                </div>
            </div>
        }

        <input name="CompanyId"  type="hidden" id="CompanyId" value="@Model.CompanyId" />
        <input name="EmployeeId"  type="hidden" id="EmployeeId" value="@Model.EmployeeId" />
        <input type="hidden" id="FeedbackId" name="feedbackId" value="@Model.FeedbackId" />
        <input type="hidden" id="EmployeeFeedbackId" name="EmployeeFeedbackId" value="@Model.EmployeeFeedbackId" />
        <div class="form-example-int">
            <div class="form-group">
                <label>Feedback on Employee</label>
                <div class="">
                    @Html.DropDownList("FeedbackOnEmployeeId", Model.EmployeeList, new { @class = "form-control", id = "FeedbackOnEmployeeId" })
                </div>
            </div>
        </div>


        <div class="form-example-int">
            <div class="form-group">
                <label>In What Context?</label>
                <div class="">
                    <textarea id="InWhatContext" class="form-control" name="InWhatContext" value="@Model.InWhatContext">@Model.InWhatContext</textarea>
                </div>
            </div>
        </div>



        <div class="form-example-int">
            <div class="form-group">
                <label>Provide Overview?</label>
                <div class="">
                    <textarea required id="ProvideOverview" class="form-control" name="ProvideOverview" value="@Model.ProvideOverview">@Model.ProvideOverview</textarea>
                </div>
            </div>
        </div>



        <div class="form-example-int">
            <div class="form-group">
                <label>What Areas?</label>
                <div class="">
                    <textarea id="WhatAreas" required class="form-control" name="WhatAreas" value="@Model.WhatAreas">@Model.WhatAreas</textarea>
                </div>
            </div>
        </div>

        <div class="form-example-int">
            <div class="form-group">
                <label>Experiences</label>
                <div class="">
                    <textarea id="Experience" required class="form-control" name="Experience" value="@Model.Experience">@Model.Experience</textarea>
                </div>
            </div>
        </div>



        <hr />

        <div class="form-example-int">
            <div class="form-group">
                <label>Appear As Anonymous</label>
                <div class="">
                    <input type="checkbox" id="EmployeeId" name="EmployeeId" value="@Model.EmployeeId" />
                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Create Feedback</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>




}


