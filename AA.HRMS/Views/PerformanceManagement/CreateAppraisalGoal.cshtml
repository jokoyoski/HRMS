@model AA.HRMS.Interfaces.IAppraisalGoalView
@{
    ViewBag.Title = "Create Appraisal Goal";
}





<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@ViewBag.Title</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <a class="btn" data-toggle="tooltip" href="/PerformanceManagement/AppraiseeList?appraisalId=@Model.EmployeeAppraisal.AppraisalId" data-placement="left" title="Back "><i class="notika-icon notika-back"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="form-element-area">
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("CreateAppraisalGoal", "PerformanceManagement", FormMethod.Post, new { id = "AddAppraisalForm" }))
            {
                @Html.AntiForgeryToken()



                if (!string.IsNullOrEmpty(Model.ProcessingMessage))
                {
                    <div>
                        <div class="container">
                            <div class="alert alert-success alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Model.ProcessingMessage
                            </div>

                        </div>
                    </div>
                }

                if (!ViewData.ModelState.IsValid)
                {
                    <div>
                        <div class="container">
                            <div class="alert alert-info alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Html.ValidationSummary()
                            </div>
                        </div>
                    </div>
                }

                <input hidden name="employeeAppraisalId" value="@Model.EmployeeAppraisal.EmployeeAppraisalId" />
                <input hidden name="companyId" value="@Model.EmployeeAppraisal.CompanyId" />
                <input hidden name="url" value="@Model.URL" />

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-element-list mg-t-30">
                        <div class="cmp-tb-hd">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group ic-cmp-int float-lb floating-lb">
                                        <div class="form-ic-cmp">
                                            <i class="notika-icon notika-"></i>
                                        </div>
                                        <div class="">
                                            <label>Appraisee Name</label>
                                            <input type="text" disabled value="@(Model.Appraisee.LastName + " " + Model.Appraisee.FirstName)" class="form-control" />


                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group ic-cmp-int float-lb floating-lb">
                                        <div class="form-ic-cmp">
                                            <i class="notika-icon notika-"></i>
                                        </div>
                                        <div class="">
                                            <label>Appraiser Name</label>
                                            @if (Model.Appraiser != null)
                                            {
                                                <input type="text" disabled value="@(Model.Appraiser.LastName + " " + Model.Appraiser.FirstName)" class="form-control" />
                                            }
                                            else
                                            {
                                                <input type="text" disabled value="N/A" class="form-control" />
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group ic-cmp-int float-lb floating-lb">
                                        <div class="form-ic-cmp">
                                            <i class="notika-icon notika-"></i>
                                        </div>
                                        <div class="">
                                            <label>Department:</label>
                                            <input type="text" disabled value="@Model.Appraisee.Department" class="form-control" />


                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group ic-cmp-int float-lb floating-lb">
                                        <div class="form-ic-cmp">
                                            <i class="notika-icon notika-"></i>
                                        </div>
                                        <div class="">
                                            <label>Job Title</label>
                                            @if (Model.Appraisee.JobTitle != null)
                                            {
                                                <input type="text" disabled value="@Model.Appraisee.JobTitle" class="form-control" />
                                            }
                                            else
                                            {
                                                <input type="text" disabled value="N/A" class="form-control" />
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group ic-cmp-int float-lb floating-lb">
                                        <div class="form-ic-cmp">
                                            <i class="notika-icon notika-"></i>
                                        </div>
                                        <div class="">
                                            <label>Appraisal Period</label>
                                            <input type="text" disabled value="@Model.Appraisal.AppraisalPeriodName" class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                        <div class="form-group ic-cmp-int float-lb floating-lb">
                                            <div class="form-ic-cmp">
                                                <i class="notika-icon notika-"></i>
                                            </div>
                                            <div class="">
                                                <label>Date Initiated</label>
                                                <input type="date" disabled value="@DisplayHelper.DisplayDate(Model.EmployeeAppraisal.DateInitiated)" class="form-control" />

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-12 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group ic-cmp-int float-lb floating-lb">
                                        <div class="form-ic-cmp">
                                            <i class="notika-icon notika-"></i>
                                        </div>
                                        <div class="">
                                            <label>Appraisal Goal</label>
                                            <textarea type="text" value="@Model.Goal" maxlength="300" name="goal" id="goal" class="form-control">@Model.Goal</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 col-md-4 col-sm-4 col-xl-6">
                                    <div class="form-group ic-cmp-int float-lb floating-lb">
                                        <div class="form-ic-cmp">
                                            <i class="notika-icon notika-"></i>
                                        </div>
                                        <div class="">
                                            <label>What Will I Do?</label>
                                            <textarea type="text" value="@Model.Measurements" maxlength="300" name="measurements" id="measurements" class="form-control">@Model.Measurements</textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-4 col-sm-4 col-xs-6">
                                    <div class="form-group ic-cmp-int float-lb floating-lb">
                                        <div class="form-ic-cmp">
                                            <i class="notika-icon notika-"></i>
                                        </div>
                                        <div class="">
                                            <label>What Outcome Will It Have?</label>
                                            <textarea type="text" value="@Model.Outcome" maxlength="300" name="outcome" id="outcome" class="form-control">@Model.Outcome</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="modal-footer">
                                <button type="submit" name="submitButton" value="Submit" class="btn btn-primary">Create</button>
                                <a href="/PerformanceManagement/AppraiseelList" class="btn btn-default" data-dismiss="modal">Close</a>
                            </div>


                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</div>
