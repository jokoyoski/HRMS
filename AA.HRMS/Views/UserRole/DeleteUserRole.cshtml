@model AA.HRMS.Interfaces.IUserAppRoleView

@{
    ViewBag.Title = "Delete from Role";
}


<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>





@using (Html.BeginForm("DeleteUserRole", "UserRole", FormMethod.Post))
{

    <div class="modal-body">


        @Html.ValidationSummary()
        @Model.ProcessingMessage

        @Html.AntiForgeryToken()

        <input id="userAppRoleId" hidden name="userAppRoleId" value="@Model.UserAppRoleId" />
        <input id="appRoleId" hidden name="appRoleId" value="@Model.AppRoleId" />
        <input id="userId" hidden name="userId" value="@Model.UserId" />

        <div class="form-example-int">
            <div class="form-group">
                <label>Role</label>
                <div class="">
                    <input id="appRoleName" class="form-control" disabled name="appRoleName" value="@Model.AppRoleName" />
                </div>
            </div>
        </div>

        <div class="form-example-int">
            <div class="form-group">
                <label>Username</label>
                <div class="">
                    <input id="username" class="form-control" disabled name="username" value="@Model.Username" />
                </div>
            </div>
        </div>


        <div class="form-example-int">
            <div class="form-group">
                <label>Created By</label>
                <div class="">
                    <input id="createByUsername" class="form-control" disabled name="createByUsername" value="@Model.CreateByUsername" />
                </div>
            </div>
        </div>


    </div>

    <div class="modal-footer">
        <button type="submit" name="submitButton" class="btn btn-default">Delete</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>

}
