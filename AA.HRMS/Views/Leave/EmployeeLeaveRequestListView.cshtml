@model AA.HRMS.Interfaces.ILeaveRequestListView


@{
    ViewBag.Title = "AA HRMS Employee Leave Request List";
    var hasInfo = ((Model != null) && (Model.leaveRequestModel != null) && Model.leaveRequestModel.Any());
}



<div class="jumbotron" style="padding-top: 10px; margin-bottom: 5px">

    <a class="popupUrl btn btn-primary font-weight-bold" id="createLeaveRequest" href="/Leave/CreateLeaveRequest?message=">Create a new Leave Request </a>

    @using (Html.BeginForm("EmployeeLeaverequestListView", "Leave", FormMethod.Post, new
    {
        id = "filterForm"
    }))
    {
        @Html.AntiForgeryToken()
        if (!string.IsNullOrEmpty(Model.ProcessingMessage))
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                    @Model.ProcessingMessage
                    @Html.ValidationSummary()
                </div>
            </div>
        }

        <div class="columns" style="font-size: 12px; padding-bottom: 1px; padding-top: 15px;">
            <div class="column" style="font-weight: bold;">
                Filter Leave Request List by:
            </div>
        </div>

        <div class="columns" style="font-size: 12px; padding-bottom: 2px; width: 100%;">
            <div class="column">
                <div class="columns" style="width: 100%;">
                    <div class="label column" style="width: 135px; text-align: right;">
                        Leave Status:
                    </div>
                    <div class="data column" style="width: 220px; text-align: right;">
                        @Html.DropDownList("leaveStatusId", Model.LeaveStatusDropDown, new { style = "width:204px;height:20px;", id = "selectedCompanyId" })
                    </div>
                </div>
            </div>
        </div>

        <div class="columns" style="font-size: 12px; margin-top: 10px; padding-bottom: 2px; width: 100%;">
            <div class="column" style="margin-left: 50px;">
                <input class="blueButton" id="btnFilter" name="submitButton" style="width: 100px;" type="submit" value="Filter" />
            </div>
            <div class="column" style="margin-left: 25px; vertical-align: middle;">
                <a href="/Leave/ListOfLeaveRequestsForEmployee" style="vertical-align: middle; font-weight: bold;">Reset</a>
            </div>
        </div>

        if (hasInfo)
        {
            <div class="columns" style="width: 100%;">
                <div class="column" style="width: 100%;">
                    <table id="leaveRequestList" class="tablesorter" style="border-color: transparent; width: 100%;">
                        <colgroup></colgroup>

                        <thead style="width: 100%">
                            <tr style="width: 100%">
                                <th>Leave Type</th>
                                <th>Date Requested</th>
                                <th>Date Leave Starts</th>
                                <th>Date Leave Ends</th>
                                <th>Leave Status</th>
                                <th colspan="8">Action</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach(var d in Model.leaveRequestModel)
                            {

                                <tr style="width: 100%;">

                                    <td>@d.LeaveTypeName</td>
                                    <td>@d.DateRequested</td>
                                    <td>@d.DateLeaveStart</td>
                                    <td>@d.DateLeaveEnds</td>
                                    <td>

                                        @{ 
                                            if (d.LeaveStatusName.Contains("Approve")){
                                                <p>Approved</p>
                                            }
                                            else if (d.LeaveStatusName.Contains("Decline")){
                                                <p>Declined</p>
                                            }
                                            else
                                            {
                                                <p>@d.LeaveStatusName</p>
                                            }

                                        }
                                    </td>

                                    <td style="border: 1px solid #FFF !important;">
                                        <a class="popupUrl" id="coy_view_@(d.LeaveId)" href="/Leave/ViewLeaveRequestEmployee?leaveRequestId=@d.LeaveId">View </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="columns" style="margin-top: 10px; width: 100%;">
                <div class="column">
                    @DisplayHelper.TablePager(Model.leaveRequestModel.Count())
                </div>
            </div>
        }
        else
        {
            <div class="columns" style="font-size: 12px; margin-left: 15px; margin-top: 15px; margin-top: 15px; width: 100%;">
                <div class="validation-summary-errors">
                   You have not made any requests for leave.
                </div>
            </div>
        }
    }
</div>

@section JavaScriptsIncludes
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.widgets.js" type="text/javascript"></script>
    <script src="/Scripts/tablesorter/jquery.tablesorter.pager.js" type="text/javascript"></script>
}

@section Stylesheets
{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
    <link href="/Content/tablesorter/theme.blue.css" rel="stylesheet" type="text/css" />
    <link href="/Content/tablesorter/jquery.tablesorter.pager.css" rel="stylesheet" type="text/css" />
}

@section JavaScriptsExecution
{
    <script type="text/javascript">


        $(document).ready(function () {

            $(function () {
                $('#leaveRequestList').tablesorter({
                    theme: 'blue',
                    headers: { 6: { sorter: false }, 7: { sorter: false } },
                    widthFixed: true,
                    widgets: ['zebra'],
                    size: 10
                }).tablesorterPager({ container: $("#pager"), size: 10 });
            });

            // popup page
            var $popupDialog = $('<div></div>').dialog({
                autoOpen: false,
                appendTo: "form",
                width: 650,
                height: 700,
                modal: true,
                title: '',
                closeText: "",
                closeOnEscape: false,
                resizable: false
            });

            $('.popupUrl').click(function () {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');
                $("span.ui-dialog-title").text('Loading the Page');
                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });


            $('.editUrl').click(function () {
                $popupDialog.html('<img src="/Content/Images/ajaxLoaderBlue.gif" alt="Viewing page..."/>');

                $("span.ui-dialog-title").text('Edit Employee');

                var dt = new Date();
                var theTime = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                var href = this.href + '&theTime=' + theTime;

                $popupDialog.load(encodeURI(href));
                $popupDialog.dialog('open');

                return false;
            });
        });
    </script>
}