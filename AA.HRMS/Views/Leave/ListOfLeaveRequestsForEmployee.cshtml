@using AA.HRMS.Interfaces.ValueTypes
@using System.Web

@model AA.HRMS.Interfaces.ILeaveRequestListView




@{
    ViewBag.Title = "Employee Leave Request List";
    var hasInfo = ((Model != null) && (Model.LeaveRequestCollection != null) && Model.LeaveRequestCollection.Any());
}


@{ var role = (String[])HttpContext.Current.Session[SessionKey.UserRoles];}


<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                @if (role.Contains("Employee"))
                                {
                                    <div class="breadcomb-ctn">
                                        <h2>My Leaves</h2>
                                    </div>
                                }
                                else
                                {
                                    <div class="breadcomb-ctn">
                                        <h2>@Model.Employee.LastName Leaves</h2>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                @if (role.Contains("Supervisor") || role.Contains("CompanyAdmin"))
                                {

                                    <a class="btn" data-toggle="tooltip" href="/Employee/ViewEmployee?employeeId=@Model.Employee.EmployeeId" data-placement="left" title="Back to @Model.Employee.LastName"><i class="notika-icon notika-back"></i></a>

                                }
                                <button class="btn" data-toggle="tooltip" onclick="createModal('/Leave/CreateLeaveRequestHR?employeeId=@Model.employeeId&url=@Model.URL')" data-placement="left" title="Put @Model.Employee.LastName @Model.Employee.FirstName On Leave"><i class="notika-icon notika-plus-symbol"></i></button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@if (!string.IsNullOrEmpty(Model.ProcessingMessage))
{
    <div>
        <div class="container">
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Model.ProcessingMessage
            </div>

        </div>
    </div>
}



@if (hasInfo)
{
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Leave Type</th>
                                        <th>Date Requested</th>
                                        <th>Date Leave Starts</th>
                                        <th>Date Leave Ends</th>
                                        <th>Leave Status</th>
                                        <th>Action</th>
                                        @if (role.Contains("Supervisor") || role.Contains("CompanyAdmin"))
                                        {
                                            <th>Action</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in Model.LeaveRequestCollection)
                                    {

                                        <tr>

                                            <td>@d.LeaveTypeName</td>
                                            <td>@d.DateRequested.Date</td>
                                            <td>@d.DateLeaveStart.Date</td>
                                            <td>@d.DateLeaveEnds.Date</td>


                                            @{
                                                if (d.LeaveStatusName.Contains("Approved"))
                                                {
                                                    <td><button disabled class="btn btn-sm btn-success">Approved</button></td>
                                                }
                                                else if (d.LeaveStatusName.Contains("Disapproved"))
                                                {
                                                    <td><button disabled class="btn btn-sm btn-danger">Declined</button></td>
                                                }
                                                else
                                                {
                                                    <td><button disabled class="btn btn-sm btn-default">Pending</button></td>
                                                }

                                            }

                                            <td>

                                                <button class="btn btn-sm btn-primary" onclick="viewModal('/Leave/ViewLeaveRequestEmployee?leaveRequestId=@d.LeaveId')" data-placement="left" title="View Leave">View</button>
                                            </td>
                                            @if (role.Contains("Supervisor") || role.Contains("CompanyAdmin"))
                                            {
                                                if (d.LeaveStatusId == 1)
                                                {
                                                    <td>
                                                        <button disabled class="btn btn-sm btn-success" data-placement="left" title="Leave is Approved">Approved</button>
                                                    </td>
                                                }
                                                else if (d.LeaveStatusId == 2)
                                                {
                                                    <td>
                                                        <button disabled class="btn btn-sm btn-danger" data-placement="left" title="Leave is Disapproved">Declined</button>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <button class="btn btn-sm btn-primary" onclick="editModal('/Leave/ChangeLeaveRequestApprovalStatusHR?leaveRequestId=@d.LeaveId&url=@Model.URL')" data-placement="left" title="Decision Pending">Approve/Decline</button>
                                                    </td>

                                                }
                                            }

                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Leave Type</th>
                                        <th>Date Requested</th>
                                        <th>Date Leave Starts</th>
                                        <th>Date Leave Ends</th>
                                        <th>Leave Status</th>
                                        <th>Action</th>
                                        @if (role.Contains("Supervisor") || role.Contains("CompanyAdmin"))
                                        {
                                            <th>Action</th>
                                        }

                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-info alert-mg-b-0" role="alert">
                    <p>No Leave</p>
                </div>
            </div>
        </div>
    </div>

}



<div class="modal fade" id="createModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayCreate">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayEdit">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="viewModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayView">

            </div>
        </div>
    </div>
</div>

@section Stylesheets{
    <link href="/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
}

@section JavaScriptsExecution
{
    <script>
        $(document).ready(function () {
            $("#createModal").on('change', '#DateLeaveEnds, #DateLeaveStart, #LeaveTypeID', function () {
                var alerts = $("#displayCreate").find(".alert");
                alerts.remove();

                var employeeAnnualLeaveDuration = $("#DateLeaveEnds").data("annualleaveduration");
                var startDate = $("#DateLeaveStart").val();
                var endDate = $("#DateLeaveEnds").val();
                var leaveTypeId = $("#LeaveTypeID").val();

                if ($("#LeaveTypeID option:selected").text().toLowerCase() == "annual leave") {
                    var days = getDays(endDate, startDate);
                    if (!isNaN(days) && days > employeeAnnualLeaveDuration) {
                        var difference = days - employeeAnnualLeaveDuration;

                        $("#displayCreate").prepend(getLeaveInformationForDisplay(employeeAnnualLeaveDuration, "Annual Leave", "Remaining Annual Leave Days is " + employeeAnnualLeaveDuration, days));
                        $("#displayCreate").prepend("<p class='alert alert-warning'>!!!The number of days for this request is greater than the allowed annual leave for this employee</p>");
                    }
                }
                else {
                    var url = "/Leave/GetDurationForLeaveType?leaveTypeId=" + leaveTypeId;
                    $.get(url, function (leaveDuration) {
                        var days = getDays(endDate, startDate);
                        if (!isNaN(days) && days > leaveDuration) {
                            var difference = days - leaveDuration;
                            var leaveType = $("#LeaveTypeID option:selected").text();
                            $("#displayCreate").prepend(getLeaveInformationForDisplay(employeeAnnualLeaveDuration, leaveType, leaveDuration, days));
                            $("#displayCreate").prepend("<p class='alert alert-warning'>!!!The number of days for this request is greater than the standard number of days for this type of leave </p>");
                        }
                    });
                }

            });
        });


        function getDays(endDate, startDate) {
            var endDay = new Date(endDate);
            var startDay = new Date(startDate);
            var millisecondsPerDay = 1000 * 60 * 60 * 24;

            var millisBetween = endDay.getTime() - startDay.getTime();
            var days = millisBetween / millisecondsPerDay;

            // Round down.
            return Math.floor(days);

        }

        function getLeaveInformationForDisplay(annualLeaveDuration, selectedLeave, selectedLeaveDuration, leaveRequestDuration) {
            var leaveInfoText = "<p class='alert alert-info'>";
            leaveInfoText += "Annual Leave Days Left for employee: <strong>" + annualLeaveDuration + " days</strong> </br>";
            leaveInfoText += "Standard number of days for the selected leave ( " + selectedLeave + " ): <strong>" + selectedLeaveDuration + "</strong> </br>";
            leaveInfoText += "Number of days being requested for this leave: <strong>" + leaveRequestDuration + " days</strong></br>";
            leaveInfoText += "</p>";
            return leaveInfoText;
        }

    </script>

    <script>
        var URL = "";

        function createModal(URL) {

            $.ajax({
                type: "GET",
                url: URL,
                success: function (data) {
                    $("#displayCreate").html(data);
                }
            });


            $("#createModal").modal();
        }

        function editModal(URL) {

            $.ajax({
                type: "GET",
                url: URL,
                success: function (data) {
                    $("#displayEdit").html(data);
                }
            });


            $("#editModal").modal();
        }

        function viewModal(URL) {

            $.ajax({
                type: "GET",
                url: URL,
                success: function (data) {
                    $("#displayView").html(data);
                }
            });

            $("#viewModal").modal();

        }
    </script>
}




