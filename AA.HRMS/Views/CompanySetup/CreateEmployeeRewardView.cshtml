
@model AA.HRMS.Interfaces.IEmployeeRewardViewModel


@{
    ViewBag.Title = "Create Employee Reward(s)";
}

<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

@Html.ValidationSummary()
@Model.ProcessingMessage





@using (Html.BeginForm("CreateEmployeeRewardView", "CompanySetup", FormMethod.Post, new { id = "addDeptForm" }))
{
    @Html.AntiForgeryToken()



    <input id="employeeId" name="employeeId" type="hidden" value="@Model.EmployeeId" />

    <input id="companyId" name="companyId" type="hidden" value="@Model.CompanyId" />

           

            <div class="modal-body">

                <div class="modal-body">

                    <div class="form-example-int">
                        <div class="form-group">
                            <label>Rewards</label>
                            <div class="nk-int-st">
                                @Html.DropDownList("RewardId", Model.RewardDropdownList, new { @class = "form-control input-sm", id = "RewardId" })
                            </div>
                        </div>
                    </div>


                    <div class="modal-footer">
                        <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Add</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
            
                  
}
                




