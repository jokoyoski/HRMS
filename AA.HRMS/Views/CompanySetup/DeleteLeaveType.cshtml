
@model AA.HRMS.Interfaces.ILeaveTypeModelView


@{
    ViewBag.Title = "Delete Leave Type";
}

<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

@Html.ValidationSummary()
@Model.ProcessingMessage


@using (Html.BeginForm("DeleteLeaveType", "CompanySetup", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="leaveTypeId" id="leaveTypeId" value="@Model.LeaveTypeID" />

    <div class="modal-body">

        <div class="form-example-int">
            <div class="form-group">
                <label>Company</label>
                <div class="nk-int-st">
                    @Html.DropDownList("CompanyID", Model.CompanyDropDown, new { @class = "form-control", id = "CompanyID", @disabled = "disabled" })
                </div>
            </div>
        </div>


        <div class="form-example-int">
            <div class="form-group">
                <label>Leave Type Name </label>
                <div class="nk-int-st">
                    <input id="LeaveTypeName" disabled name="LeaveTypeName" class="form-control" value="@Model.LeaveTypeName" />
                </div>
            </div>
        </div>

        <div class="form-example-int">
            <div class="form-group">
                <label> Description</label>
                <div class="">
                    <textarea id="Description" name="Description" disabled class="form-control">@Model.Description</textarea>
                </div>
            </div>
        </div>



    </div>

    <div class="modal-footer">
        <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Delete</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>
}