@model AA.HRMS.Interfaces.ILoanView
@{
    ViewBag.Title = "AA HRMS - Delete Loan";
}

<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

            


    @using (Html.BeginForm("DeleteLoan", "CompanySetup", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" name="LoanId" value="@Model.LoanId" />

          <div class="modal-body">
            @Html.ValidationSummary()
            @Model.ProcessingMessage
            <div class="form-example-int">
                <div class="form-group">
                    <label>Loan Name</label>
                    <div class="">
                        <input id="LoanName" disabled name="LoanName" class="form-control ", type="text" value="@Model.LoanName" />
                    </div>
                </div>
            </div>

            <div class="form-example-int">
                <div class="form-group">
                    <label>Loan Amount</label>
                    <div class="">
                        <input id="LoanAmount" disabled name="LoanAmount" class="form-control ", type="number" step="0.0001" value="@Model.LoanAmount" />
                    </div>
                </div>
            </div>

            <div class="form-example-int">
                <div class="form-group">
                    <label>Interest Rate</label>

                    <div class="">
                        <input id="InterestRate" disabled name="InterestRate" class="form-control ", type="number" step="0.0001" value="@Model.InterestRate" />
                    </div>
                </div>
            </div>

            <div class="form-example-int">
                <div class="form-group">
                    <label>Deduction Rate</label>

                    <div class="">
                        <input id="DeductionRate" disabled name="DeductionRate" class="form-control ", type="number" step="0.0001" value="@Model.DeductionRate" />
                    </div>
                </div>
            </div>

            @*<div class="columns" style="width: 100%; padding-top: 15px; padding-bottom: 5px;">
                <div class="column" style="margin-left: 195px;">
                    <input class="blueButton" id="btnSubmit" name="submitButton" style="width: 80px;" type="submit" value="Delete" />
                </div>
                <div class="column" style="margin-left: 15px;">
                    <input id="btnCancel" class="blueButton" name="submitButton" style="width: 80px;"
                           type="submit" value="Cancel" />
                </div>
                <div class="column" style="font-size: 9px; font-weight: bold; font-style: italic; padding-left: 5px; padding-top: 2px;">
                    You must enter all information above correctly to enable submission.
                </div>
            </div>*@
        </div>

          <div class="modal-footer">
              <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Delete</button>
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          </div>
    }
