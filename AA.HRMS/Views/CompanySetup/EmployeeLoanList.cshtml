@using AA.HRMS.Interfaces.ValueTypes

@model AA.HRMS.Interfaces.IEmployeeLoanListView


@{
    ViewBag.Title = "Loans Applied";
    var hasInfo = (Model != null) && (Model.EmployeeLoanCollection.Any());

    var role = (String[])HttpContext.Current.Session[SessionKey.UserRoles];
}



<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@ViewBag.Title</h2>
                                </div>
                            </div>
                        </div>
                        @if (role.Contains("Employee"))
                        {
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                                <div class="breadcomb-report">
                                    <button class="btn" data-toggle="tooltip" onclick="createModal('/companysetup/employeeapplyloan?employeeId=@Model.Employee.EmployeeId&url=@Model.URL')" data-placement="left" title="@Model.Employee.LastName Loan"><i class="notika-icon notika-plus-symbol"></i></button>

                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ProcessingMessage))
{
    <div>
        <div class="container">
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="notika-icon notika-close"></i></span></button> @Model.ProcessingMessage
            </div>

        </div>
    </div>
}


@using (Html.BeginForm("EmployeeLoanList", "CompanySetup", FormMethod.Post, new
{
    id = "filterForm"
}))
{
    @Html.AntiForgeryToken()


}

@if (hasInfo)
{
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Loan Name</th>
                                        <th>Date Applied</th>
                                        <th>Employee Name</th>
                                        <th>Amount</th>
                                        <th>Action</th>
                                        @if (role.Contains("CompanyAdmin"))
                                        {
                                            <th>Action</th>
                                        }
                                        else
                                        {
                                            <th>Status</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in Model.EmployeeLoanCollection)
                                    {
                                    <tr>
                                        <td>
                                            @d.LoanName
                                        </td>
                                        <td>
                                            @d.DateCreated.Date
                                        </td>
                                        <td>
                                            @d.EmployeeName
                                        </td>
                                        <td>
                                            @d.Amount
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" onclick="editModal('/CompanySetup/ViewEmployeeLoan?employeeLoanId=@d.EmployeeLoanId')" data-placement="left" title="Edit Loan">View</button>
                                        </td>

                                        @if (d.IsApproved == null && role.Contains("CompanyAdmin"))
                                        {
                                            <td>
                                                <button class="btn btn-sm btn-primary" onclick="deleteModal('/CompanySetup/EditEmployeeLoan?employeeLoanId=@d.EmployeeLoanId&url=@Model.URL')" data-placement="left" title="Loan Still Pending">Approve/Decline</button>
                                            </td>
                                        }
                                        else if(d.IsApproved == null)
                                        {
                                            <td><button disabled class="btn btn-sm btn-default">Pending</button></td>
                                        }
                                        else if (d.IsApproved == true)
                                        {
                                            <td><button disabled class="btn btn-sm btn-success">Approved</button></td>
                                        }
                                        else
                                        {
                                            <td><button disabled class="btn btn-sm btn-danger">Declined</button></td>
                                        }
                                    </tr>
                                               
                                     }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Loan Name</th>
                                        <th>Date Applied</th>
                                        <th>Employee Name</th>
                                        <th>Amount</th>
                                        <th>Action</th>
                                        @if (role.Contains("CompanyAdmin"))
                                        {
                                            <th>Action</th>
                                        }
                                        else
                                        {
                                            <th>Status</th>
                                        }
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-info alert-mg-b-0" role="alert">
                    <p>No Applied Loans</p>
                </div>
            </div>
        </div>
    </div>
}


<div class="modal fade" id="createModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayCreate">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayEdit">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div id="displayDelete">

            </div>
        </div>
    </div>
</div>

<script>
    var URL = "";

    function createModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayCreate").html(data);
            }
        });


        $("#createModal").modal();
    }

    function editModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayEdit").html(data);
            }
        });

        $("#editModal").modal();

    }

    function deleteModal(URL) {

        $.ajax({
            type: "GET",
            url: URL,
            success: function (data) {
                $("#displayDelete").html(data);
            }
        });

        $("#deleteModal").modal();

    }

</script>