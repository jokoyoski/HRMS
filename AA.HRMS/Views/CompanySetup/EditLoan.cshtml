@model AA.HRMS.Interfaces.ILoanView
@{
    ViewBag.Title = "AA HRMS - Edit Loan";
}

<div class="modal-header">
    <h3>@ViewBag.Title</h3>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
            


    @using (Html.BeginForm("EditLoan", "CompanySetup", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" id="LoanId" name="LoanId" value="@Model.LoanId" />

        <div class="modal-body">
            @Html.ValidationSummary()
            @Model.ProcessingMessage

            <div class="form-example-int">
                <div class="form-group">
                    <label>Loan Name</label>
                    <div class="">
                        <input id="LoanName" name="LoanName" class="form-control ", type="text" value="@Model.LoanName" />
                    </div>
                </div>
            </div>

            <div class="form-example-int">
                <div class="form-group">
                    <label>Loan Amount</label>
                    <div class="">
                        <input id="LoanAmount" name="LoanAmount" class="form-control ", type="number" step="0.0001" value="@Model.LoanAmount" />
                    </div>
                </div>
            </div>

            <div class="form-example-int">
                <div class="form-group">
                    <label>Interest Rate</label>

                    <div class="">
                        <input id="InterestRate" name="InterestRate" class="form-control ", type="number" step="0.0001" value="@Model.InterestRate" />
                    </div>
                </div>
            </div>

            <div class="form-example-int">
                <div class="form-group">
                    <label>Deduction Rate</label>

                    <div class="">
                        <input id="DeductionRate" name="DeductionRate" class="form-control ", type="number" step="0.0001" value="@Model.DeductionRate" />
                    </div>
                </div>
            </div>

            <div class="form-example-int">
                <div class="form-group">
                    <label>Duration (Year)</label>

                    <div class="">
                        <input id="duration" name="duration" class="form-control " type="number" step="0.0001" value="@Model.Duration" />
                    </div>
                </div>
            </div>

            </div>
        <div class="modal-footer">
            <button type="submit" name="submitButton" value="Submit" class="btn btn-default">Modify</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
    }


