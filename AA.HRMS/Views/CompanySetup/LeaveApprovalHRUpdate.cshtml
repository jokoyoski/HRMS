
@model AA.HRMS.Interfaces.ILeaveHrUpdateView
@{
    ViewBag.Title = "Leave Approval By HR";
}

<h2 style="color:blue;">LeaveRequest</h2>

@using (Html.BeginForm("SaveLeaveApprovalHRUpdate", "Benefits", FormMethod.Post, new { id = "editForm", enctype = "multipart/form-data", encoding = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div style="color:blue;background-color:lightblue;">
        <div class="form-horizontal">
            <h4></h4>
            <hr />
            <p class="text-danger">@Html.ValidationSummary()</p>
            <p class="text-danger"> @Model.ProcessingMessage</p>


            <input type="hidden" name="leaveId" id="leaveId" value="@Model.LeaveID" />

            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span class="required">*</span>Enter your ID:
                </div>
                <div style="padding-top:5px;">
                    <input id="hRApproverID" name="hRApproverID" style="width: 204px;" type="text" maxlength="100" value="@Model.HRApproverID" />
                </div>
            </div>



            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span class="required">*</span> Select new Leave Status:
                </div>
                <div class="data column" style="overflow: hidden;">
                    @Html.DropDownList("LeaveStatusID", Model.LeaveStatusList, new { style = "width:204px;height:20px;", id = "LeaveStatusID" })
                </div>
            </div>


            <div class="columns" style="width: 100%; padding-top: 5px;">
                <div class="label column" style="width: 175px; text-align: right; padding-right: 5px;">
                    <span class="required">*</span>Enter your comment:
                </div>
                <div style="padding-top:5px;">
                    <input id="hRApproverComment" name="hRApproverComment" style="width: 204px;" type="text" maxlength="100" value="@Model.HRApproverComment" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="enabledButton" style="width:125px;" />
                </div>
            </div>
        </div>
    </div>
}


