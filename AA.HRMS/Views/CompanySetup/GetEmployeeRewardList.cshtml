@model AA.HRMS.Interfaces.IEmployeeRewardListView


@{
    ViewBag.Title = "EmployeeReward List";
    var hasInfo = ((Model != null) && (Model.employeeReward != null) && Model.employeeReward.Any());
}


<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>@ViewBag.Title</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <button class="btn" data-toggle="tooltip"  onclick="createModal('/companysetup/CreateEmployeeRewardView?employeeId=@Model.Employee.EmployeeId')" data-placement="left" title="Create Employee Reward"><i class="notika-icon notika-plus-symbol"></i></button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



    @if (hasInfo)
    {
        <div class="data-table-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="data-table-list">
                            <div class="table-responsive">
                                <table id="data-table-basic" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Company Name</th>
                                            <th>Reward Title(s)</th>
                                            <th>Reward Date Created</th>
                                            <th>Is Active?</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var d in Model.employeeReward)
                                        {
                                            <tr>

                                                <td>
                                                    @d.companyName
                                                </td>
                                                <td>
                                                    @d.rewardName
                                                </td>
                                                <td>
                                                    @d.DateCreated
                                                </td>

                                                <td>
                                                    @DisplayHelper.YesOrNo(d.IsActive)
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Company Name</th>
                                            <th>Reward Title(s)</th>
                                            <th>Reward Date Created</th>
                                            <th>Is Active?</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }






   <div class="modal fade" id="createModal" role="dialog">
        <div class="modal-dialog modals-default">
              <div class="modal-content">
                 <div id="displayCreate">

             </div>
          </div>
   </div>
 </div>

    <div class="modal fade" id="viewModal" role="dialog">
           <div class="modal-dialog modals-default">
                  <div class="modal-content">
                     <div id="displayView">

                      </div>
               </div>
          </div>
   </div>


  <script>
                                            var URL = "";

                                            function createModal(URL) {

                                                $.ajax({
                                                    type: "GET",
                                                    url: URL,
                                                    success: function (data) {
                                                        $("#displayCreate").html(data);
                                                    }
                                                });


                                                $("#createModal").modal();
                                            }

                                            
                                            function viewModal(URL) {

                                                $.ajax({
                                                    type: "GET",
                                                    url: URL,
                                                    success: function (data) {
                                                        $("#displayView").html(data);
                                                    }
                                                });

                                                $("#viewModal").modal();

                                            }

   </script>


